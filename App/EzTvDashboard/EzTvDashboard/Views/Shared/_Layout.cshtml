<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="EzTvDashboard">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico" type="image/icon">
    <link rel="icon" href="/favicon.ico" type="image/icon">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/CssBundle")
</head>
    <body class="skin-orange">
        <div id="theme-setting"></div>
        <div id="navbar" class="navbar">
            <a href="http://www.ezbob.com"><div class="navbar-brand logo"></div></a>
            @Html.Raw(ViewBag.DashboardTitle)
            <ul class="nav flaty-nav pull-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-li"><a class="logout" href="@Url.Action("Logout", "Account")">Logout</a><div class='last-updated'></div></li>
                }
            </ul>
        </div>
        <div class="container" id="main-container">
            <div id="main-content">
                @RenderBody()
            </div>
        </div>

        @Scripts.Render("~/bundles/js")
        @RenderSection("scripts", required: false)
    </body>
</html>
