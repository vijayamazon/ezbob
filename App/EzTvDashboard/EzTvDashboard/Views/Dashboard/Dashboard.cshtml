@using EzTvDashboard.Code

@model EzTvDashboard.Models.DashboardModel
<div class="box">
    <div class="box-title text-center"><h3>Today</h3></div>
    <div class="row">
        <div class="col-md-4">
            <div class="tile tile-ezgrey">
                <div class="caption">
                    UK Site Visitors
                </div>
                <p class="title text-center">@Model.Stats["T_UkVisitors"].ToInt()</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="tile tile-ezgreen">
                <div class="caption">
                    Registration
                </div>
                <p class="title text-center">@Model.Stats["T_Registration"].ToInt()</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="tile tile-ezgrey">
                <div class="caption">
                    Applications
                </div>
                <p class="title text-center">@Model.Stats["T_Application"].ToInt()</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="tile tile-ezgrey">
                <div class="caption">
                    Approved
                </div>
                <p class="title text-center">@Model.Stats["T_Approved"].ToK()</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="tile tile-ezgreen">
                <div class="caption">
                    Loans out
                </div>
                <p class="title text-center">@Model.Stats["T_LoansOut"].ToK()</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="tile tile-ezgrey">
                <div class="caption">
                    Repayments
                </div>
                <p class="title text-center">@Model.Stats["T_Repayments"].ToK()</p>
            </div>
        </div>
    </div>
</div>

