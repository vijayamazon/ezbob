                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="box box-green">
            <div class="box-title">
                <h3><i class="fa fa-bar-chart-o"></i>Funnel Numbers</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <table class="table table-condensed fill-head table-striped">
                    <thead>
                        <tr>
                            <td></td>
                            <td>Count</td>
                            <td>Percent</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var el in Model.FunnelNumbers)
                        {
                            <tr>
                                <td>@el.Caption</td>
                                <td>@el.Count</td>
                                <td>@el.Percent.ToPercent()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="box box-green">
            <div class="box-title">
                <h3><i class="fa fa-bar-chart-o"></i>Existing Customers</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="box-content">
                <table class="table table-condensed fill-head table-striped">
                    <thead>
                        <tr>
                            <td></td>
                            <td>Count</td>
                            <td>Potential</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var el in Model.ExistingCustomers)
                        {
                            <tr>
                                <td>@el.Caption</td>
                                <td>@el.Count</td>
                                <td>@el.Potential.ToK()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
