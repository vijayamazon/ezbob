        <div class="col-md-4">
            <div class="tile tile-ezgrey">
                <div class="caption">
                    Avg interest
                </div>
                <p class="title text-center">@Model.Stats.GetSafe("G_AvgInterest").ToPercent()</p>
            </div>
        </div>
    </div>
</div>
<div class="box">
    <div class="box-title text-center">
        <h3></h3>
    </div>
</div>

