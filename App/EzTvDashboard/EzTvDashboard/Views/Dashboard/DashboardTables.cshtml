@using EzTvDashboard.Code
@model EzTvDashboard.Models.DashboardModel

<div class="row">
    <div class="col-md-6">
        @if (Model.MonthlyBoard.Any())
        {
            <div class="box box-blue">
                <div class="box-title">
                    <h3><i class="fa fa-bar-chart-o"></i>Monthly Dashboard</h3>
                    <div class="box-tool">
                        <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                        <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <table class="table table-condensed fill-head table-striped">
                        <thead>
                            <tr>
                                <td></td>
                                <td>Count</td>
                                <td>Values</td>
                                <td>Benchmark</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var el in Model.MonthlyBoard)
                            {
                                <tr>
                                    <td>@el.Caption</td>
                                    <td>@el.Count</td>
                                    <td>@el.Value</td>
                                    <td>@el.Benchmark.ToPercent()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        @if (Model.MonthlyTraffic.Any())
        {
            <div class="box box-blue">
                <div class="box-title">
                    <h3><i class="fa fa-bar-chart-o"></i>Monthly Traffic</h3>
                    <div class="box-tool">
                        <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                        <a data-action="close" href="#"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <table class="table table-condensed fill-head table-striped">
                        <thead>
                            <tr>
                                <td></td>
                                <td>Visits</td>
                                <td>Applications</td>
                                <td>Approvals</td>
                                <td>Loans</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var el in Model.MonthlyTraffic)
                            {
                                <tr>
                                    <td>@el.Caption</td>
                                    <td>@el.Visits</td>
                                    <td>@el.Applications</td>
                                    <td>@el.Approvals</td>
                                    <td>@el.Loans</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        @if (Model.MonthlyCollection.Any())
