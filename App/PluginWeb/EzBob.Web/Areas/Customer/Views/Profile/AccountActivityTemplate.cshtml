@model dynamic
<script id="account-activity-template" type="text/template">
	<% if (loans.length) { %>
		<table class="table">
		<thead>
			<tr>
				<th>Ref. Number</th>
				<th width="20%">Origination Date</th>
				<th width="20%">Loan Amount</th>
				<th width="20%">Status</th>
				<th width="20%">Open Balance</th>
				<th width="20%"></th>
			</tr>
		</thead>
		<tbody><%
			_.each(loans, function(loan, i) {
				var last = loans.length - 1 == i;
				%><tr class="<%- last ? 'last' : '' %>">
					<td class="first"><%- loan.RefNumber  %></td>
					<td><%- EzBob.formatDateUK(loan.Date) %></td>
					<td><%-EzBob.formatPoundsUK(loan.LoanAmount)%></td>
					<td class="status<%-loan.Status%>"><%-loan.StatusDescription%></td>
					<td><%-EzBob.formatPoundsUK(loan.TotalBalance)%></td>
					<td class="last" width="100">
						<a href="#LoanDetails/<%-loan.Id%>" class="btn-details button btn-green loanbtn-<%-loan.Status%> clean-btn" ui-event-control-id="dashboard:loan-details">Details</a>
					</td>
				</tr><%
			});
		%></tbody>
	</table>
	<div class="clearfix right">
		<a href="#" class="print-link ev-btn-org" onclick="window.print();return false;" ui-event-control-id="dashboard:print-account-activity">Print</a>
	</div>
	<% } else { %>
		There is no activity in your account.
	<% } %>
</script>
