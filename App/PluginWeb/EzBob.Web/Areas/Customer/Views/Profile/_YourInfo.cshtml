@helper CompanyCountFields()
{
    <fieldset>
        <legend>On <%- EzBob.formatDate(CompanyEmployeeCountInfo.Created) %></legend>
        <div class="control-group">
            <label class="control-label">Current number of employees</label>
            <div class="controls">
                <input type="text" value="<%- CompanyEmployeeCountInfo.EmployeeCount %>" class="form_field" readonly="readonly" />
            </div>
        </div>
        <%if(CompanyEmployeeCountInfo.TopEarningEmployeeCount != null){%>
		<div class="control-group">
            <label class="control-label">Number of employees earning (gross salary) over £41,450 per annum</label>
            <div class="controls">
                <input type="text" value="<%- CompanyEmployeeCountInfo.TopEarningEmployeeCount %>" class="form_field" readonly="readonly" />
            </div>
        </div>
        <%}%>
        <%if(CompanyEmployeeCountInfo.BottomEarningEmployeeCount != null){%>
		<div class="control-group">
            <label class="control-label">Number of employees earning (gross salary) less than £9,440 per annum</label>
            <div class="controls">
                <input type="text" value="<%- CompanyEmployeeCountInfo.BottomEarningEmployeeCount %>" class="form_field" readonly="readonly" />
            </div>
        </div>
        <%}%>
        <%if(CompanyEmployeeCountInfo.EmployeeCountChange != null){%>
		<div class="control-group">
            <label class="control-label">Change in the number of employees in last 12 months</label>
            <div class="controls">
                <input type="text" value="<%- CompanyEmployeeCountInfo.EmployeeCountChange %>" class="form_field" readonly="readonly" />
            </div>
        </div>
        <%}%>
        <div class="control-group">
            <label class="control-label">Total monthly salary expenditure (inc tax & NI)</label>
            <div class="controls">
                <input type="text" value="<%- CompanyEmployeeCountInfo.TotalMonthlySalary %>" class="form_field" readonly="readonly" />
            </div>
        </div>
    </fieldset>
}