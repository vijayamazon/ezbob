<script id="personal-info-template" type="text/template">
    <fieldset>
        <legend>Personal Information</legend>
            
        <div class="control-group">
            <label class="control-label">Name</label>
            <div class="controls">
                <input type="text" value="<%-CustomerPersonalInfo.FirstName%>" class="form_field" readonly="readonly"/>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Middle</label>
            <div class="controls">
                <input type="text" value="<%-CustomerPersonalInfo.MiddleInitial%>" class="form_field" readonly="readonly"/>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Surname</label>
            <div class="controls">
                <input type="text" value="<%-CustomerPersonalInfo.Surname%>" class="form_field" readonly="readonly"/>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Date of birth</label>
            <div class="controls">
                <input type="text" value="<%-EzBob.formatDate(CustomerPersonalInfo.DateOfBirth)%>" class="form_field" readonly="readonly"/>
            </div>
        </div>
            <div class="controls">
                    <div class="addressEdit">
                        @EzForm.AddressInput("PersonalAddress", "Address", "personal")
                    </div>
            </div>
    
        <div class="control-group">
            <label class="control-label">Time at address</label>
            <div class="controls">
                <input type="text" value="<%-CustomerPersonalInfo.TimeAtAddress%>  years" class="form_field" readonly="readonly"/>
            </div>
        </div>

        <div class="controls offline">
            <div class="addressEdit">
                @EzForm.AddressInput("OtherPropertyAddress", "Other property address", "other-property")
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Residential status</label>
            <div class="controls">
                <input type="text" value="<%-CustomerPersonalInfo.ResidentialStatus%>" class="form_field" readonly="readonly"/>
            </div>
        </div>
            
        <div class="control-group">
            <label class="control-label">Daytime phone #</label>
            <div class="controls">
                <input class ="personEditInput phonenumber form_field" id="DayTimePhone" name="DayTimePhone" type="text" value="<%-CustomerPersonalInfo.DaytimePhone%>"  readonly="readonly" />
            </div>
        </div>
            
        <div class="control-group">
            <label class="control-label">Mobile phone #</label>
            <div class="controls">
                <input class ="personEditInput phonenumber form_field" id="MobilePhone" name="MobilePhone" type="text" value="<%-CustomerPersonalInfo.MobilePhone%>"  readonly="readonly" />
            </div>
        </div>
           
        <div class="control-group">
            <label class="control-label">Type of business</label>
            <div class="controls">
                <input type="text" value="<%-CustomerPersonalInfo.TypeOfBusinessName%>" class="form_field" readonly="readonly"/>
            </div>
        </div>
        
        <%if(CustomerPersonalInfo.OverallTurnOver != null){%>
        <div class="control-group">
            <label for="OverallTurnOver" class="control-label">Total <b>estimated</b> sales</label>
            <div class="controls cashControlls">
                <input id="OverallTurnOver" readonly="readonly" name="OverallTurnOver" type="text" value="<%-CustomerPersonalInfo.OverallTurnOver%>" class="cashInput personEditInput form_field" />
            </div>
        </div>   
       <%}%>
        <%if(CustomerPersonalInfo.WebSiteTurnOver != null){%>
        <div class="control-group">
            <label for="WebSiteTurnOver" class="control-label">Online estimated sales</label>
            <div class="controls cashControlls">
                <input id="WebSiteTurnOver" readonly="readonly" name="WebSiteTurnOver" type="text" value="<%-CustomerPersonalInfo.WebSiteTurnOver%>" class="cashInput personEditInput form_field" />
            </div>
        </div>   
        <%}%>
        @*@if (DBConfigurationValues.Instance.DisplayEarnedPoints)
        {
        <div class="control-group">
            <label class="control-label">Earned points</label>
            <div class="controls">
                <input type="text" value="<%- LoyaltyPoints %>" readonly="readonly" class="form_field"/>
            </div>
        </div>
        }*@
    </fieldset>

</script>

