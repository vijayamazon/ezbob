@model dynamic
@helper TransactionsShedule()
{   
    <table class="table payment-schedule-table">
        <%
            var rollovers = rollovers || [];        
        %>
    <thead>
        <tr>
            <th style="width: 75px;" ></th>
            <th style="width: 75px;">Date</th>
            <th style="width: 75px;">Principal</th>
            <th style="width: 75px;">Interest</th>
            <th style="width: 75px;">Fees</th>
            <th style="width: 75px;">Rebate</th>
            <th style="width: 75px;">Total</th>
            @*<th style="width: 75px;">Balance</th>*@
            <th style="width:110px;">Status</th>
        </tr>
    </thead>
        <tbody>
            
            <!-- Pacnet Transactions -->
            
            <% _.each(pacnetTransactions, function(transaction, i){%>
            <tr style="height: 56px;">
                <td><img  style="width: 24px; height: 24px" src='@Url.Content("~/Content/img/payment-to-customer.png")'  alt=""/></td>
                <td class="hm_black" ><%- moment.utc(transaction.PostDate).local().format("MMM DD YYYY")  %></td>
                <td class="bold right"><%- EzBob.formatPoundsWidhDash(transaction.Amount) %></td>
                <td class='right'><%- EzBob.formatPoundsWidhDash(transaction.Interest) %></td>
                <td class='right'><%- EzBob.formatPoundsWidhDash(transaction.Fees) %></td>
                <td class='right'><%- EzBob.formatPoundsWidhDash(0) %></td>
                <td class='bold right'><%- EzBob.formatPoundsWidhDash(transaction.Amount) %></td>
                @*<td></td>*@
                <td class="hm_black"><%- transaction.StatusDescription %></td>
            </tr>
            <%}) %>

            <!-- Paypoint Transactions -->
            
            <% _.each(transactions, function(transaction, i){
                if (transaction.StatusDescription != 'Error') {%>
                    <tr style="height: 56px;">
                        <td><img  height="31"  src='@Url.Content("~/Content/img/wizard-mark-completed.png")'  alt=""/></td>
                        <td class="hm_black"><%- moment.utc(transaction.PostDate).local().format("MMM DD YYYY")  %></td>
                        <td class='right'><%- EzBob.formatPoundsWidhDash(transaction.LoanRepayment) %></td>
                        <td class='right'><%- EzBob.formatPoundsWidhDash(transaction.Interest) %></td>
                        <td class='right'><%- EzBob.formatPoundsWidhDash(transaction.Fees + transaction.Rollover) %></td>
                        <td class='right'><%- EzBob.formatPoundsWidhDash(0) %></td>
                        <td class='right'><%- EzBob.formatPoundsWidhDash(transaction.Amount) %></td>
                        @*<td><%- EzBob.formatPoundsWidhDash(transaction.Balance) %></td>*@
                        <td class="hm_black"><%- transaction.StatusDescription %></td>
                    </tr>
                <%}%>
            <%}) %>

            <!-- Rollovers -->
            <% _.each(rollovers, function(rollover, i){%>
            <tr style="height: 56px;">
                <td><img  height="31"  src='@Url.Content("~/Content/img/two_arrows.png")'  alt=""/></td>
                <td class="hm_black"><%- moment.utc(rollover.ExperyDate).local().format("MMM DD YYYY")  %></td>
                <td></td>
                <td></td>
                <td class='right hm_black'><%- EzBob.formatPoundsWidhDash(rollover.Payment) %></td>
                <td></td>
                <td></td>
                <td class="hm_black">Roll Over</td>
            </tr>
            <%}) %>

            <!-- Charges -->
            <% _.each(charges, function(charge, i){%>
                <% if ( charge.State !== 'Paid' && charge.State !== 'Expired'){%>
                    <tr style="height: 56px;">
                        <td><img  height="31"  src='@Url.Content("~/Content/img/calendarx32.png")'  alt=""/></td>
                        <td class="hm_black"><%- moment.utc(charge.Date).local().format("MMM DD YYYY")  %></td>
                        <td></td>
                        <td></td>
                        <td class='right hm_black'><%- EzBob.formatPoundsWidhDash(charge.Amount) %></td>
                        <td></td>
                        <td></td>
                        @*<td><%- EzBob.formatPoundsWidhDash(transaction.Balance) %></td>*@
                        <td class="hm_black"><%- charge.State %></td>
                    </tr>
                <%}%>
            <%}) %>
            
            <!-- Schedule -->
            
            <% _.each(schedule, function(item, i){%>
            <% if ( (item.Status !== 'PaidEarly') && (item.Status !== 'PaidOnTime') && (item.Status !== 'Paid') ){%>
                    <%
                        var late = item.Status === 'Late',
                            styleForLate = late ? "hm_red" : "hm_black"
                    %>
                    <tr style="height: 56px;" data-scheduleId="<%-item.Id%>">
                        <%var urlImage = item.Status === 'Late' ? "@Url.Content("~/Content/img/calendar-late.png")" : "@Url.Content("~/Content/img/calendarx32.png")"%>
                        <td><img src="<%-urlImage%>"></td>
                        <td class="hm_black"><%- moment.utc(item.Date).local().format("MMM DD YYYY")  %></td>
                        <td class='right <%-styleForLate%>'><%-EzBob.formatPoundsWidhDash(item.LoanRepayment)%></td>
                        <td class='right <%-styleForLate%>'><%-EzBob.formatPoundsWidhDash(item.Interest)%></td>
                        <td class='right <%-styleForLate%>'><%-EzBob.formatPoundsWidhDash(item.LateCharges)%></td>
                        <td class='right <%-styleForLate%>'><%- EzBob.formatPoundsWidhDash(0) %></td>
                        <td class='right <%-styleForLate%>'><%-EzBob.formatPoundsWidhDash(item.AmountDue)%></td>
                        @*<td><%-EzBob.formatPounds(item.Balance)%></td>*@
                        <td class='<%-styleForLate%>'>
                            <%-item.StatusDescription == 'AlmostPaid' ? 'Open' : item.StatusDescription%>
                            <% if(late){%>
                                <br/><span class="late-installment-tip">See Late Balance above</span>
                            <%}%>
                        </td>
                    </tr>
                <%}%>
            <%}) %>

        </tbody>
    </table>
}

@helper LoanDetailsTemplate()
{
    <h1 style="margin-bottom: 30px;">Loan Details</h1>
    <div style="padding-left: 0; padding-bottom: 30px;">
        <div class="dashboard-frame  simple-well" style="height: auto;">
            <%
                var address,
                    type = customer.BusinessTypeReduced,
                    companyName='',
                    isLate = loan.Status == 'Late';
                    
                switch(type){
                    case 'Personal':
                        address = customer.PersonalAddress.toJSON()[0];
                    break;
                    case 'Limited':
                        address = customer.LimitedAddress[0];
                        companyName = customer.LimitedInfo.LimitedCompanyName || '' + "<br />";
                    break;
                    case 'NonLimited':
                        address =  customer.NonLimitedAddress[0];
                        companyName = customer.NonLimitedInfo.NonLimitedCompanyName  || '' + "<br />";
                    break;
                }
            %>
            <table style="width:100%;">
                <tr>
                    <td class="caption">Date:</td>
                    <td><%- EzBob.formatDateHumanFull(loan.Date) %> </td>
                </tr>
                <tr>
                    <td class="caption">Name:</td>
                    <td><%-customer.CustomerPersonalInfo.FirstName%> <%-customer.CustomerPersonalInfo.Surname%></td>
                </tr>
                    <tr>
                        <td class="caption">Address:</td>
                        <td> <%if(address){%> <%-address.Line1 || ''%> <%-address.Line2 || ''%> <%-address.Town || ''%> <%-address.Postcode || ''%> <%}%></td>
                    </tr>
                <tr>
                    <td class="caption">Loan Reference#:</td>
                    <td><%-loan.RefNumber || ''%></td>
                </tr>
            </table>
        </div>
    </div>   
    <h2 style="margin-bottom: 10px;">Loan Summary</h2>
    <div class="simple-well" style="margin-bottom: 30px;">
        <div class="row-fluid form-horizontal loan-details">
            <div class="span4">                
                <dl>
                    <dt>Loan Amount:</dt>
                    <dd><%-EzBob.formatPoundsWidhDash(loan.LoanAmount)%></dd>
                    
                    <dt>Origination Date:</dt>
                    <dd> <%- moment.utc(loan.Date).local().format('MMM DD, YYYY') %> </dd>
                    
                    <dt>Interest Rate:</dt>
                    <dd> <%- EzBob.formatPercents(loan.InterestRate) %></dd>

                    <% if(isLate){%>
                        <dt>Late Balance:</dt>
                        <dd> <%- EzBob.formatPounds(loan.Late) %></dd>
                    <%}%>
                </dl>
            </div>
            
            <div class="span1">&nbsp;</div>

            <div class="span4">
                <dl style="margin-left: -50px;">
                    <dt>Open Balance:</dt>
                    <dd><%-EzBob.formatPounds(loan.TotalBalance)%></dd>
                
                    <% if( area !='Underwriter'){ %>    
                        <dt>Loan Status:</dt>
                        <dd class="status<%-loan.Status%>"><%-loan.Status%></dd>
                    <% } %>

                    <dt>Total Paid:</dt>
                    <dd><%- EzBob.formatPounds(loan.Repayments)%></dd>
                    
                    <dt>Setup Fee:</dt>
                    <dd><%- EzBob.formatPounds(loan.SetupFee)%></dd>
                </dl>
            </div>

            <div class="span3">
                <% 
                	var payButtonName = "Make Payment";
                    var hasRolover = rollovers && rollovers.length > 0;
                    if(hasRolover){
                        payButtonName = "Pay Roll Over";
                    } else if(loan.Status == 'Live' && loan.IsEarly){
                        payButtonName = "Pay Early";
                    } else if(isLate && !hasRolover ){
                        payButtonName = "Pay Now";
                    }
                %>
                <% if(loan.Status == 'Live' || loan.Status == 'Late') {%>
                    <a href="#PayEarly/<%-loan.Id%>" class="btn-continue button orange pay-early"  style="margin-top: 5px;"><%= payButtonName %></a>
                <%}%>                
            </div>
        </div>
    </div>
    
    <h2 style="margin-bottom: 10px;">Payment Schedule</h2>

    @TransactionsShedule()

    <div class="loan_apr_block">
        Loan APR: <%- loan.APR %> %
    </div>
    
    <h2 style="margin-bottom: 10px; margin-top: 30px;">Loan Agreement</h2>
    <div class="simple-well" style="margin-bottom: 30px;">
        <div class="row-fluid form-horizontal loan-agreements">
            <ul>
                <% _.each(loan.Agreements, function(item, i){%>
                <li><a href="@Url.Action("Download", "Agreements", new { Area = "" })/<%=item.Id%>"><%=item.Name%></a></li>
                <%});%>
            </ul>
        </div>
    </div>
    
    <div class="clearfix">
        <%if(area !='Underwriter'){%>
        <a href="#" class="btn-back button grey pull-right">Back</a>
        <%}%>
    </div>
    
}

<script id="loan-details-template" type="text/template">
    @LoanDetailsTemplate()
</script>