@model dynamic
@{Html.RenderPartial("~/Views/Shared/_LoanScheduleTemplate.cshtml"); }

<script id="apply-forloan-template" type="text/template">
	<div class="loan-amount-header">
		<h2>
            <span class="loan-amount-header-start">Choose loan amount</span>
            <span class="duration-select-allowed"> and duration</span>
		</h2>
		<p><span class="duration-select-allowed">Select between 3 to 12 months. </span>You can always pay the loan early and save on interest.</p>
	</div>

	<div class="cash-question">
		<div id="loan-sliders"></div>
	</div>

	<div id="block-loan-schedule">
		<div class="loan-schedule">
		</div>
	</div>

	<h2 style="margin-top: 40px;">Review and accept the agreement</h2>

	<div id="block-agreement">
		<div class="agreement">
		</div>
	</div>

	<div class="eu-agreement-section">
		<div class="overview loan-agreement simple-well clearfix">
			<div class="eu-agreement-header">
				<h3 class="eu-agreement-header-text">Your loan will be included in the EU EPMF program, please confirm:</h3>
				<div class="eu-agreement-image"></div>
			</div>
			<ol>
				<li>I Employ less than 10 persons.</li>
				<li>Annual turnover is less then £ 1.5M.</li>
				<li>Autonomous enterprise – no other enterprise owns more than 25% of the borrower, I do not own more than 25% in another enterprise.</li>
				<li>Loan is for business purposes.</li>
				<li>Not involved in the following sectors: arms production and trading; human cloning; tobacco; gambling.</li>
			</ol>
		</div>
	</div>
    
    <div class="cosme-agreement-section">
        <div class="overview loan-agreement simple-well clearfix">
            <div class="eu-agreement-header">
                <h3 class="eu-agreement-header-text">Your loan will be included in the EU COSME program, please confirm:</h3>
                <div class="eu-agreement-image"></div>
            </div>
            <ol>
                <li>I employ less than 250 persons.</li>
                <li>Annual turnover is less than £ 40M.</li>
                <li>My company/business does not have a substantial focus on one or more of the following sectors: arms production and trading; human cloning; genetically modified organisms; tobacco or alcohol; gambling, pornography, internet piracy.</li>
            </ol>
        </div>
    </div>

	@using (Html.BeginForm("LoanLegalSigned", "GetCash", new { Area = "Customer" }, FormMethod.Post, new { @class = "LoanLegal" })) {
		<div class="controls">
			<label class="checkbox">
				<input type="checkbox" id="preAgreementTermsRead" class="preAgreementTermsRead" name="preAgreementTermsRead" value="true" ui-event-control-id="loan-legal:apply-for-loan-pre-agreement" />
				<span class="company-preAgreement">I have read and agree to the agreement terms</span>
				<span style="display: none" class="consumer-preAgreement">I have read and agree to the pre-contract terms</span>
			</label>
			<label class="checkbox">
				<input type="checkbox" id="agreementTermsRead" class="agreementTermsRead" name="agreementTermsRead" value="true" ui-event-control-id="loan-legal:apply-for-loan-agreement" />
				<span class="company-preAgreement">I have read and agree to the guaranty terms</span>
				<span style="display: none" class="consumer-preAgreement">I have read and agree to the contract terms</span>
			</label>
			<label class="checkbox eu-agreement-section">
				<input type="checkbox" id="euAgreementTermsRead" name="euAgreementTermsRead" class="euAgreementTermsRead" value="true" ui-event-control-id="loan-legal:apply-for-loan-eu-agreement" />
				I agree to the EU program terms
			</label>
            <label class="checkbox cosme-agreement-section">
                <input type="checkbox" id="cosmeAgreementTermsRead" name="cosmeAgreementTermsRead" class="cosmeAgreementTermsRead" value="true" ui-event-control-id="loan-legal:apply-for-loan-cosme-agreement" />
                I agree to the EU COSME program terms
            </label>
			<!-- label class="checkbox quick-offer-section">
				<input type="checkbox" id="directorConsentRead" class="directorConsentRead" name="directorConsentRead" value="true" ui-event-control-id="loan-legal:apply-for-loan-director" />
				I have read and agree to the directors' consent declaration
			</label -->

			<label class="checkbox notInBankruptcyContainer">
				<input type="checkbox" id="notInBankruptcy" class="notInBankruptcy" name="notInBankruptcy" value="true" readonly="readonly" ui-event-control-id="loan-legal:not-in-bankruptcy" />
				I have read and confirm the solvency representations and warranties
			</label>
			
			<div class="loan-disclosure-text hide">
				<h3>DISCLOSURE FOR REGULATED LOANS: (LOANS MADE TO INDIVIDUALS)</h3>
				You hereby represent and warranty that at the date of applying for and accepting this loan, you are not: (i) in a Debt Management Plan (or similar scheme) or considering entering a Debt Management Plan (or similar scheme) in the coming 12 month period; (ii) in an I.V.A or are considering entering into an I.V.A in the coming 12 month period; or (iii) bankrupt or considering filing for bankruptcy in the coming 12 month period.
				<h3>DISCLOSURE FOR NON-REGULATED LOANS (LOANS MADE TO COMPANIES)</h3>
				You hereby represent and warranty that at the date of applying for and accepting this loan that with respect to the Borrower: (i) no resolution has been passed, petition presented, proceedings commenced or other procedure or step for its liquidation; (ii) no procedure has been used against the Borrower to attach or take possession of any property for payment of a debt; (iii) no receiver or other similar official has been appointed in respect of any of the property of the Borrower;  (iv) no application or petition for an administration order has been made; and none of the foregoing is pending or contemplated; and (v) no director of the Company or proposed guarantor of the loan is: (A) in a Debt Management Plan (or similar scheme) or considering entering a Debt Management Plan (or similar scheme) in the coming 12 month period; (B) in an I.V.A or are considering entering into an I.V.A in the coming 12 month period; or (C) bankrupt or considering filing for bankruptcy in the coming 12 month period.
			</div>

			<div class="form_field_container"></div>

			<div class="form_field_container sign-full-name hide">
				<span>Signature:</span>
				<label class="attardi-input">
					<span>Type your full name</span>
					<input type="text" name="signedName" id="signedName" class="form_field" ui-event-control-id="loan-legal:signed-name" />
				</label>
			</div>
            <input type="hidden" name="loanAmount" id="loanAmount" />
            <input type="hidden" name="repaymentPeriod" id="repaymentPeriod" />
		</div>
	    <div class="buttons_container">
            <a class="btn-continue button btn-green submit <% if (!agree) { %>disabled<% } %>" href="url" ui-event-control-id="loan-legal:continue">Continue</a>
            <a href="#" class="btn-back button btn-grey" ui-event-control-id="loan-legal:back">Back</a>
        </div>
	 }
</script>

<script id="consumers-agreement-template" type="text/template">
	<div style="padding-right: 15px;" class="simple-well clearfix">
		<div class="tabbable">
			<ul class="nav nav-tabs">
				<li class="active agreement-tab"><a href="#tab3" data-toggle="tab" page-name="Pre-Contract-Agreement">Pre-Contract</a></li>
				<li class="agreement-tab"><a href="#tab4" data-toggle="tab" page-name="CreditActAgreement">Contract</a></li>
			</ul>
			<div class="tab-content">
				<div class="tab-pane active" id="tab3">
					<div class="overview loan-agreement" id="Pre-Contract-Agreement">
                        <%if(agreementType == 'ezbob') {%>
						    @{Html.RenderPartial("~/Areas/Customer/Views/Agreement/Pre-Contract-Agreement.cshtml");}
                        <%}%>
                        <%if(agreementType == 'alibaba') {%>
                            @{Html.RenderPartial("~/Areas/Customer/Views/Agreement/AlibabaPre-Contract-Agreement.cshtml");}
                        <%}%>
                        <%if(agreementType == 'everline') {%>
                            @{Html.RenderPartial("~/Areas/Customer/Views/Agreement/EVLPre-Contract-Agreement.cshtml");}
                        <%}%>
                        <%if(agreementType == 'everlineRefinance') {%>
                            @{Html.RenderPartial("~/Areas/Customer/Views/Agreement/EVLRefinancePre-Contract-Agreement.cshtml");}
                        <%}%>
					</div>
				</div>
				<div class="tab-pane" id="tab4">
					<div class="overview loan-agreement" id="CreditActAgreement">
                        <%if(agreementType == 'ezbob') {%>
                            @{Html.RenderPartial("~/Areas/Customer/Views/Agreement/CreditActAgreement.cshtml");}
                        <%}%>
                        <%if(agreementType == 'alibaba') {%>
                            @{Html.RenderPartial("~/Areas/Customer/Views/Agreement/AlibabaCreditActAgreement.cshtml");}
                        <%}%>
                        <%if(agreementType == 'everline') {%>
                            @{Html.RenderPartial("~/Areas/Customer/Views/Agreement/EVLCreditActAgreement.cshtml");}
                        <%}%>
                        <%if(agreementType == 'everlineRefinance') {%>
                            @{Html.RenderPartial("~/Areas/Customer/Views/Agreement/EVLRefinanceCreditActAgreement.cshtml");}
                        <%}%>
						
					</div>
				</div>
			</div>
		</div>
		@PrintDownload()
	</div>
</script>

