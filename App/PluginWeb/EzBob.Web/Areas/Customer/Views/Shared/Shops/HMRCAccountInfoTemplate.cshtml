<script id="HMRCAccountInfoTemplate" type="text/template">
    <div id="initialDiv" class="row-fluid">
        <h2>HMRC account<div id="uploadAndLinkInfoButton" class="hmrc-info-button hmrc-info-button-right-margin"></div></h2>
        <div class="wizard-top-notification">
            <h5>You can link your HMRC online account or upload your VAT payment history.</h5>
        </div>

        <form id="hmrcAccount" class="cg-link-account-form">
            <div class="hmrc_main_buttons_container">
                <div id="linkButton" class="marketplace-button-empty marketplace-button hmrc-main-button pull-left marketplace-button-more">
                    <a href="#" class="hmrcAnimatedButton" ui-event-control-id="link-account:add_name_link_xxx">
                        <div class="hmrcLinkButton" />
                        <div class="onhover">Link</div>
                    </a>
                </div>
                <div id="uploadButton" class="marketplace-button-empty marketplace-button hmrc-main-button pull-left marketplace-button-more">
                    <a href="#" class="hmrcAnimatedButton" ui-event-control-id="link-account:add_name_link_xxx">
                        <div class="hmrcUploadButton" />
                        <div class="onhover">Upload</div>
                    </a>
                </div>
            </div>

            <div class="form_buttons_container">
                <div class="attardi-button">
                    <a href="#" class="back rc-button grey hmrcBack" ui-event-control-id="link-account:hmrc_back">Back</a>
                </div>
            </div>

            <div class="hmrc-why-question offline_entry_message wizard_message">
                <div id="uploadAndLinkHelpButton" class="hmrc-question-button float_left"></div>
                <div class="hmrc-why">Why do we need this?
                    <br />
                    We need your company’s HMRC data to properly evaluate your application.</div>
            </div>
        </form>
    </div>

    <div id="linkAccountDiv" class="row-fluid hide">
        <h2>HMRC link<div id="linkInfoButton" class="hmrc-info-button hmrc-info-button-right-margin-link"></div></h2>
        <h5>Please link your HMRC account by entering your HMRC credentials exactly as used on the HMRC website. To upload the HMRC files, press the back button.</h5>

        <form id="hmrcLinkAccountForm" class="cg-link-account-form">
            <div id="hmrc_fields_link_wrapper">

                <div id="hmrc_fields" class="hmrc_fields_margin">
                    @EzForm.InputText("hmrc_user_id", "User ID", "", cls: "form_field", isRequired: true, statusIcon: true, uiEventControlID: "link-account:hmrc_user_id")
                    @EzForm.Password("hmrc_password", "Password", "", cls: "form_field", isRequired: true, statusIcon: true, uiEventControlID: "link-account:hmrc_password")
                </div>
            </div>
            <div class="clearfix">

                <div class="form_buttons_container hmrc_margin_from_header">
                    <div class="attardi-button">
                        <a href="#" class="rc-button green disabled connect-account" ui-event-control-id="link-account:hmrc_connect">Link Account</a>
                        <a href="#" class="back rc-button grey linkAccountBack" ui-event-control-id="link-account:hmrc_link_account_back">Back</a>
                    </div>
                </div>
            </div>

            <div class="hmrc-why-question offline_entry_message wizard_message">
                <div id="linkHelpButton" class="hmrc-question-button float_left"></div>
                <div class="hmrc-why">Your data is not shared with any third party. The system only reads the HMRC data to evaluate your business.</div>
            </div>
        </form>
    </div>

    <div id="uploadFilesDiv" class="row-fluid hide">
        <h2>HMRC upload<div id="uploadInfoButton" class="hmrc-info-button hmrc-info-button-right-margin-upload"></div></h2>
        <h5>Upload your last five  VAT returns. Upload files titled “<strong>Printed Copy of Submitted VAT return for your record records</strong>”.</h5>
        
        <form id="hmrcAccountUpload" class="dropzone newVatFilesUpload" action="@Url.Action("UploadedFiles", "Hmrc", new { Area = "Customer" })"></form>

        <form id="hmrcuploadFiles" class="cg-link-account-form">
            <div class="clearfix">
                <a href="#" class="rc-button green select-vat oldVatFilesUpload" ui-event-control-id="link-account:hmrc_select_vat">Select VAT files</a>

                <div id="upload-files-form">
                    <iframe></iframe>
                </div>

                <div class="form_buttons_container hmrc_margin_from_header">
                    <div class="attardi-button">
                        <a href="#" class="back rc-button green newVatFilesUpload newVatFilesUploadButton disabled" ui-event-control-id="link-account:hmrc_upload_files_do_upload">Upload</a>
                        <a href="#" class="back rc-button grey uploadFilesBack" ui-event-control-id="link-account:hmrc_upload_files_back">Back</a>
                    </div>
                </div>
            </div>

            <div class="hmrc-why-question offline_entry_message wizard_message" style="width: 100%;">
                <div id="uploadHelpButton" class="hmrc-question-button float_left" style="margin-top: 55px;"></div>
                <div class="hmrc-why">
                    <p>Don’t know where to locate your last 15 months VAT returns?</p>
                    <p>You should have received the files directly from the HMRC for your records.  We suggest you  request from your  filing agent or accountant to email your your last 15 months VAT returns.</p>
                    <p>Remember to mention that you need files titled “Printed Copy of Submitted VAT return for your records” </p>
                </div>
            </div>
        </form>
    </div>

    <div class="hide">
        <div id="hmrcLinkHelpPopup" class="help_window">
            <img src="../../../../../Content/img/hmrc_login_sample.png" />
        </div>
    </div>

    <div class="hide">
        <div id="hmrcUploadHelpPopup" class="help_window">
            <img src="../../../../../Content/img/hmrc_vat_sample.png" />
        </div>
    </div>

    <div class="hide">
        <div id="hmrcUploadAndLinkHelpPopup" class="help_window">
            <img src="../../../../../Content/img/hmrc_vat_and_login_sample.png" />
        </div>
    </div>
    </div>
</script>
