@model dynamic
@{ bool bIsWizard = (string)ViewContext.RouteData.Values["controller"] == "Wizard"; }

<script id="store-info" type="text/template">
    <div>
        <div class="quick-offer-form hide">
            <h2 class="form_start">Congratulations, you are already approved for <span class="quick-offer-amount"></span></h2>

            <div class="quick-offer-form-column pull-left immediate-offer">
                <h3>Get <span class="quick-offer-amount"></span> now!</h3>

				<div class="link-container"><a class="btn-take-quick-offer" ui-event-control-id="link-account:take-quick-offer">
					<div class="amount"></div>
					<div class="term quick-offer-form-item"></div>
					<div class="interest-rate quick-offer-form-item">Interest rate: <span class="value"></span></div>
					<div class="onhover"><br /><br /><h4>Get <span class="quick-offer-amount"></span> now!</h4></div>
				</a></div>
            </div>

            <div class="quick-offer-form-column pull-right potential-offer">
                <h3>Continue</h3>

				<div class="link-container"><a class="btn-go-to-link-accounts" ui-event-control-id="link-account:go-to-link-accounts">
					<div class="amount"></div>
					<div class="term quick-offer-form-item"></div>
					<div class="interest-rate quick-offer-form-item">Interest rate: <span class="value"></span></div>
					<div class="onhover"><br /><br /><h4>Continue</h4></div>
				</a></div>
            </div>
        </div>

        <div class="link-accounts-form hide">
            <h2 class="form_start">Link accounts</h2>
            
            @*
            This ebay pixel code is commented out now in phase 1 but will be uncommented later - do not delete
            @{
                bool ebayPixelEnabled = CurrentValues.Instance.EbayPixelEnabled;
                var controller = (string)ViewContext.RouteData.Values["controller"];

                if (ebayPixelEnabled && controller == "Wizard")
                {
                <img src="https://ad-emea.doubleclick.net/activity;dc_pixel_url=rmboom;rm=ezbobcp;ord='<%- ordpi %>'?" width="1" height="1" border="0" alt="" />
                }
            }*@

            <div style="display: none;" class="online_entry_message wizard_message">Please connect at least one account.</div>

            <div style="display: none;" class="offline_entry_message wizard_message">
				In order to properly evaluate your business, we need a view into it.
				Please upload your company’s financial documents or link one of the accounts below.
            </div>

            <div style="display: none;" class="offline_entry_message profile_message">Add more accounts to improve your <strong>ezbob</strong> rating.</div>
            
            <div style="display: none;" class="online_entry_message profile_message">Add more accounts to improve your <strong>ezbob</strong> rating.</div>

            @if (bIsWizard)
            { <div class="eBayPaypalRule hide">Paypal account must be added in order to continue.</div> }

            <div class="accounts-list row-fluid"></div>

            <div style="padding-bottom: 50px; margin-top: 10px;" class="cunt-button source">
                @if (bIsWizard)
                { <div class="eBayPaypalRule hide">Paypal account must be added in order to continue.</div> }
            </div>
            <div class="marketplace-button show-more" style="width:100% !important">
                <a class="btn-showmore rc-button hide alignright" ui-event-control-id="link-account:showmore" data-current="more"><span class="caption">Show more account types</span><div class="rotate90">&laquo;</div>
                    <div class="onhover">Show more data source connectors</div>
                </a>
            </div>

            <div class="attardi-button cunt-button">
                <button class="back-store rc-button grey pull-right">Back</button>
                <a class="btn-continue rc-button green continue disabled alignright" ui-event-control-id="link-account:submit">Complete</a>

                <a class="btn-back-to-quick-offer rc-button green alignright" ui-event-control-id="link-account:back_to_quick_offer">Back</a>
                <a id="link_account_implicit_back" style="display: none;" class="hide" ui-event-control-id="link-account:implicit_back"></a>
            </div>

            <div style="display: none;" class="hmrc-why-question offline_entry_message wizard_message">
                <div class="hmrc-question-sign"></div>
                <div class="hmrc-why">Why do we need this? <br />We need your  HMRC and/or your company's bank account data to properly evaluate your application.</div>
            </div>

            <div class="marketplace-group-template marketplace-group hide">
                <h3 class="group-title"></h3>
            </div>
        </div>
    </div>
</script>
