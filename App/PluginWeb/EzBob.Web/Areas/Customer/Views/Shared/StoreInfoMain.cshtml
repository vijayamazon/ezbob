@using EzBob.Web.Infrastructure
@using StructureMap
@model dynamic

@helper StoreInfo() {
	<div>
	    <h2 class="form_start">Link Accounts</h2>
        
	    @*This ebay pixel code is commented out now in phase 1 but will be uncommented later - do not delete
	    @{
            var config = ObjectFactory.GetInstance<IEzBobConfiguration>();
            bool ebayPixelEnabled = config.EbayPixelEnabled;
            var controller = (string)ViewContext.RouteData.Values["controller"];
            if (ebayPixelEnabled && controller == "Wizard")
	        {
	            <img src="https://ad-emea.doubleclick.net/activity;dc_pixel_url=rmboom;rm=ezbobcp;ord='<%- ordpi %>'?" width="1" height="1" border="0" alt="" />
	        }
	    }*@

	    <div class="full_width entry_message">You can link one account to be approved for a loan. However, the more you link, the more funds you can get.</div>
        @{
            if ((string) ViewContext.RouteData.Values["controller"] == "Wizard")
            {
	            <div class="eBayPaypalRule hide">Paypal account must be added in order to continue.</div>
            }
        }
        <div class="YodleeAndFreeAgentAndSageRule hide">Please add more accounts in order to continue.</div>

            <div class="accounts-list row-fluid">
		</div>

		<div>A minimum of <span class="importantnumber">£10,000</span> annual turnover is required to get a loan offer</div>
		<div>Link more accounts to be approved for a loan</div>
		<div style="padding-bottom: 50px; margin-top: 10px;" class="cont-button source">
		@{
			if ((string) ViewContext.RouteData.Values["controller"] == "Wizard")
			{
			    <div class="eBayPaypalRule hide">Paypal account must be added in order to continue.</div>
			}
		}
		<div class="YodleeAndFreeAgentAndSageRule hide">Please add more accounts in order to continue.</div>
			    
			<a href="#" class="back-step button grey pull-right">Back</a>
			<a class="next button orange pull-right disabled">Continue</a>
		</div>
	</div>
}

<script id="store-info" type="text/template">
	@StoreInfo()
</script>
