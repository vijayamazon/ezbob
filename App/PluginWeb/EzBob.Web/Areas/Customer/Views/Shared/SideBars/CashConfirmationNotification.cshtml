@using EzBob.Web.Models.Strings
@model dynamic

@{
    Layout = "_SideBarLayout.cshtml";
}

<h1><img alt="" src="@Url.Content("~/Content/img/sidebar/ico-tips.png")"><span style="margin-left:-3px;">Quick Tips</span></h1>
<ul class="gtarr">
    <li
        rel="popover" 
        data-content="For future needs and for tax purposes please keep records of all of your loan documentations."
        data-original-title="">
        Keep record of the confirmation.
    </li>
    <li
        rel="popover" 
        data-content="To avoid misunderstanding , please go over the details in the confirmation statement .For any enquiries please contact our customer care."
        data-original-title="">
        Check the details  before   submitting.
    </li>
</ul>

@section Video
{
    <div style="position:relative">
        <span>Featuring - Get Cash</span>
        <img src="@Url.Content("~/Content/Video/poster.jpg")" alt="" style="width: 320px; height:140px" class="poster-picture"/>
        <a href="javascript:;" 
            class="play-link" 
            data-videoDivId="cashDiv"
            data-videoId ="cash"
            >Play</a>    
    </div>
    
    <div id="cashDiv" style="display: none;">
        <video id="cash" class="video-js vjs-default-skin" controls preload="none" width="640" height="360" 
               poster="@Url.Content("~/Content/Video/poster.jpg")"
               data-setup="{}">
            <source src="@Url.Content("~/Content/Video/GetCash.mp4")" type='video/mp4' />
            <source src="@Url.Content("~/Content/Video/GetCash.webm")" type='video/webm' />
            <source src="@Url.Content("~/Content/Video/GetCash.ogv")" type='video/ogg' />
         
        </video>    
    </div>
}