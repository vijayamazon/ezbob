@using EzBob.Web.Models.Strings
@model dynamic

@{
    Layout = "_SideBarLayout.cshtml";
}

<h1><img alt="" src="@Url.Content("~/Content/img/sidebar/ico-tips.png")"><span style="margin-left:-3px;">Quick Tips</span></h1>
<ul class="gtarr">
    <li
        rel="popover" 
        data-content="Please have your bank account number and sort code ready to link your bank account to EZBOB so we can transfer you the funds."
        data-original-title="">
        Please have your bank account number and sort code ready.
    </li>
    <li
        rel="popover" 
        data-content="In order to receive funds from EZBOB you will be required to provide us with a bank account that is under your name or your company’s name. This account should  be your primary business account."
        data-original-title="">
        Make sure the bank account is your primary business account.
    </li>
    <li
        rel="popover" 
        data-content="The linking your primary business bank account video tutorial is very clear an intuitive and will help you link your account to EZBOB in no time."
        data-original-title="">
        Please watch the tutorial  to easily link your primary bank account to get funds.
    </li>
</ul>

@section Video
{
    <div style="position:relative">
        <span>Featuring - Add your Bank account</span>
        <img src="@Url.Content("~/Content/Video/poster.jpg")" alt="" style="width: 320px; height:140px" class="poster-picture"/>
        <a href="javascript:;" 
            class="play-link" 
            data-videoDivId="bankDiv"
            data-videoId ="bank"
            >Play</a>    
    </div>
    
    <div id="bankDiv" style="display: none;">
        <video id="bank" class="video-js vjs-default-skin" controls preload="none" width="640" height="360" 
               poster="@Url.Content("~/Content/Video/poster.jpg")"
               data-setup="{}">
            <source src="@Url.Content("~/Content/Video/Bank-account.mp4")" type='video/mp4' />
            <source src="@Url.Content("~/Content/Video/Bank-account.webm")" type='video/webm' />
            <source src="@Url.Content("~/Content/Video/Bank-account.ogv")" type='video/ogg' />
        </video>    
    </div>
}