@using EzBob.Web.Models.Strings
@model dynamic

@{
    Layout = "_SideBarLayout.cshtml";
}

<h1><img alt="" src="@Url.Content("~/Content/img/sidebar/ico-tips.png")"><span style="margin-left:-3px;">Quick Tips</span></h1>
<ul class="gtarr">
    <li
        rel="popover" 
        data-content="Please use the slider or enter the amount of cash you wish to borrow. Make sure you choose an amount that you can fully repay according to the payment schedule. Should you need more cash you can always apply for more."
        data-original-title="">
        Make sure you take the amount you need and  can repay in time.
    </li>
    <li
        rel="popover" 
        data-content="Each offer is valid for 24 hours from the time of approval. You can always apply for another loan after the expiration time."
        data-original-title="">
        Be advised the offer is valid for 24 hours
    </li>
    <li
        rel="popover" 
        data-content="Check the payment schedule table prior to submitting your request. Once you are satisfied with the terms continue to approve the loan agreements."
        data-original-title="">
        Review the payment schedule before submitting.
    </li>
    <li
        rel="popover" 
        data-content="In order to get the loan you will need to approve the loan agreements so please review them carefully to ensure you are aware and comfortable with the terms and conditions."
        data-original-title="">
        Carefully review the loan agreements.
    </li>
</ul>


@section Video
{
    <div style="position:relative">
        <span>Featuring - Get Cash</span>
        <img src="@Url.Content("~/Content/Video/poster.jpg")" alt="" style="width: 320px; height:140px" class="poster-picture"/>
        <a href="javascript:;" 
            class="play-link" 
            data-videoDivId="cash2Div"
            data-videoId ="cash2"
            >Play</a>    
    </div>
    
    <div id="cash2Div" style="display: none;">
        <video id="cash2" class="video-js vjs-default-skin" controls preload="none" width="640" height="360" 
               poster="@Url.Content("~/Content/Video/poster.jpg")"
               data-setup="{}">
            <source src="@Url.Content("~/Content/Video/GetCash.mp4")" type='video/mp4' />
            <source src="@Url.Content("~/Content/Video/GetCash.webm")" type='video/webm' />
            <source src="@Url.Content("~/Content/Video/GetCash.ogv")" type='video/ogg' />
      
        </video>    
    </div>
}