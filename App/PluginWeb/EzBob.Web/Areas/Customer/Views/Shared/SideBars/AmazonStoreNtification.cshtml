@using EzBob.Web.Models.Strings
@model dynamic

@{
    Layout = "_SideBarLayout.cshtml";
}

<h1><img alt="" src="@Url.Content("~/Content/img/sidebar/ico-tips.png")"><span style="margin-left:-3px;">Quick Tips</span></h1>
<ul class="gtarr">
    <li
        rel="popover" 
        data-content="In order to link your eBay shop fast and easy we advise you to have your user ID and passwords ready."
        data-original-title="">
        Please have your user ID and passwords ready.
    </li>
    <li
        rel="popover" 
        data-content="As you link your Amazon shops to EZBOB you will be asked to copy the developer account number from EZBOB  to Amazon MWS page. Also, you will be asked to copy the merchant  & Marketplace IDs from Amazon MWS to EZBOB relevant fields."
        data-original-title="">
        Be ready to copy information provided by EZBOB and Amazon.
    </li>
    <li
        rel="popover" 
        data-content="The adding your Amazon video tutorial is very clear an intuitive and will help you add your shop in no time."
        data-original-title="">
        Please watch the tutorial  for even easier sign up.
    </li>
</ul>

@section Video
{
    <div style="position:relative">
        <span>Featuring - Add your Amazon shop</span>

        <img src="@Url.Content("~/Content/Video/poster.jpg")" alt="" style="width: 320px; height:140px" class="poster-picture"/>

        <a href="javascript:;" 
            class="play-link" 
            data-videoDivId="amazonDiv"
            data-videoId ="amazon"
            >Play</a>    
    </div>
    
    <div id="amazonDiv" style="display: none;">
        <video id="amazon" class="video-js vjs-default-skin" controls preload="none" width="640" height="360" 
               poster="@Url.Content("~/Content/Video/poster.jpg")"
               data-setup="{}">
            <source src="@Url.Content("~/Content/Video/Amazon.mp4")" type='video/mp4' />
            <source src="@Url.Content("~/Content/Video/Amazon.webm")" type='video/webm' />
            <source src="@Url.Content("~/Content/Video/Amazon.ogv")" type='video/ogg' />
        </video>    
    </div>
}
