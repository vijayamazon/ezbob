@using EzBob.Web.Models.Strings
@model dynamic

@{
    Layout = "_SideBarLayout.cshtml";
}

    <div class="SecurityStatement">
        <div>
            <h4>Notification</h4>
            You have missed a payment. Please rectify the situation.  If for some reason you cannot pay now, please give us a call so that we can better understand your situation.
        </div>
    
        <hr/>
    
        <div>
            <h4>Common Questions</h4>
            <ul class="gtarr">
                <li
                    rel="popover" 
                    data-content="It’s a bad habit.  If you pay late you will be charged extra fees.  Please revert to your loan agreement."
                    data-original-title=""
                    >
                    What happens when I pay late?
                </li>
                <li
                    rel="popover" 
                    data-content="  We will give you a few days grace before we are required to inform the credit bureau.  Unfortunately we will charge you late fees. "
                    data-original-title=""
                    >
                    Does missing a payment affect my credit? 
                </li>
                <li
                    rel="popover" 
                    data-content="Please contact us and pay as much as you can."
                    data-original-title=""
                    >
                    What happens if I can't afford to pay the full amount?  
                </li>
            </ul>
        </div>

        <hr/>
    
        <div>
            <h4>Need Help?</h4>
            Feel free to contact us anytime, we are open  24 hours a day.  Use Livechat or call 0800 011 4787
        </div>
        <hr/>
    </div>

@section Video
{
    <div style="position:relative">
        <span>Featuring - Get Cash</span>
        <img src="@Url.Content("~/Content/Video/poster.jpg")" alt="" style="width: 320px; height:140px" class="poster-picture"/>
        <a href="javascript:;" 
            class="play-link" 
            data-videoDivId="cash2Div"
            data-videoId ="cash2"
            >Play</a>    
    </div>
    
    <div id="cash2Div" style="display: none;">
        <video id="cash2" class="video-js vjs-default-skin" controls preload="none" width="640" height="360" 
               poster="@Url.Content("~/Content/Video/poster.jpg")"
               data-setup="{}">
            <source src="@Url.Content("~/Content/Video/GetCash.mp4")" type='video/mp4' />
            <source src="@Url.Content("~/Content/Video/GetCash.webm")" type='video/webm' />
            <source src="@Url.Content("~/Content/Video/GetCash.ogv")" type='video/ogg' />
      
        </video>    
    </div>
}