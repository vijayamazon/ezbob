@using EzBob.Web.Models.Strings
@model dynamic

@{
    Layout = "_SideBarLayout.cshtml";
}

<h1><img alt="" src="@Url.Content("~/Content/img/sidebar/ico-tips.png")"><span style="margin-left:-3px;">Quick Tips</span></h1>
<ul class="gtarr">
    <li
        rel="popover" 
        data-content="Please have your PayPal account number ready to link your account to EZBOB."
        data-original-title="">
        Please have your PayPal number ready.
    </li>
    <li
        rel="popover" 
        data-content="Currently, your PayPal account is used for determining your loan eligibility and for improving your terms. In the near future your PayPal account will be able to be used to transfer and to repay loans."
        data-original-title="">
        Adding your PayPal account  can improve your loan terms.
    </li>
    <li
        rel="popover" 
        data-content="The linking your PayPal video tutorial is very clear and intuitive and will help you link it to EZBOB in no time."
        data-original-title="">
        Please watch the tutorial  to easily link your PayPal account.
    </li>
</ul>

@section Video
{
    <div style="position:relative">
        <span>Featuring - Add your PayPal account</span>
        <img src="@Url.Content("~/Content/Video/poster.jpg")" alt="" style="width: 320px; height:140px" class="poster-picture"/>
        <a href="javascript:;" 
            class="play-link" 
            data-videoDivId="paypalkDiv"
            data-videoId ="paypal"
            >Play</a>    
    </div>
    
    <div id="paypalkDiv" style="display: none;">
        <video id="paypal" class="video-js vjs-default-skin" controls preload="none" width="640" height="360" 
               poster="@Url.Content("~/Content/Video/poster.jpg")"
               data-setup="{}">
            <source src="@Url.Content("~/Content/Video/PayPal-tutorial.mp4")" type='video/mp4' />
            <source src="@Url.Content("~/Content/Video/PayPal-tutorial.webm")" type='video/webm' />
            <source src="@Url.Content("~/Content/Video/PayPal-tutorial.ogv")" type='video/ogg' />
        </video>    
    </div>
}