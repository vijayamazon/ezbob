@using EzBob.Web.Models.Strings
@model dynamic

@{
    Layout = "_SideBarLayout.cshtml";
}

<h1><img alt="" src="@Url.Content("~/Content/img/sidebar/ico-tips.png")"><span style="margin-left:-3px;">Quick Tips</span></h1>
<ul class="gtarr">
    <li
        rel="popover" 
        data-content="Please have your PayPal account number ready to link your account to EZBOB."
        data-original-title="">
        Please have your PayPal number ready.
    </li>
    <li
        rel="popover" 
        data-content="Please have your bank account number and sort code ready to link your bank account to EZBOB so we can transfer you the funds."
        data-original-title="">
        Please have your bank account number and sort code ready.
    </li>
    <li
        rel="popover" 
        data-content="The linking your PayPal and bank accounts video tutorials are very clear and intuitive and will help you link them to EZBOB in no time."
        data-original-title="">
        Please watch the tutorials  to easily link your PayPal and bank accounts.
    </li>
</ul>

@section Video
{
    <div style="position:relative">
        <span>Featuring - Add your Bank account</span>
        <img src="@Url.Content("~/Content/Video/poster.jpg")" alt="" style="width: 320px; height:140px" class="poster-picture"/>
        <a href="javascript:;" 
            class="play-link" 
            data-videoDivId="mv-accountsDiv"
            data-videoId ="mv-accounts"
            >Play</a>    
    </div>
    
    <div id="mv-accountsDiv" style="display: none;">
        <video id="mv-accounts" class="video-js vjs-default-skin" controls preload="none" width="640" height="360" 
               poster="@Url.Content("~/Content/Video/poster.jpg")"
               data-setup="{}">
            <source src="@Url.Content("~/Content/Video/Bank-account.mp4")" type='video/mp4' />
            <source src="@Url.Content("~/Content/Video/Bank-account.webm")" type='video/webm' />
            <source src="@Url.Content("~/Content/Video/Bank-account.ogv")" type='video/ogg' />
        </video>    
    </div>
}
