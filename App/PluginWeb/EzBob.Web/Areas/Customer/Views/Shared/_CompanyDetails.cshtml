<script id="oneDirector" type="text/template">
	<%_.each(directors, function(director, i){%>
		<div class="Directors">	
			<h1 style="padding-left:0;">Director #<%=i+1%><a style="margin-left: 15px; margin-bottom: 7px" number="<%=i+1%>" href="#" class="removeDirector btn green">Remove</a></h1>

			<div class="control-group">
				<div class="controls">
					<label class="control-label attardi-input">
						<span>Name</span>
						<input class="form_field director_name_part" id="<%-preffix%>[<%=i%>].Name" name="<%-preffix%>[<%=i%>].Name" type="text" value="<%- director.Name %>" />
					</label>
					<img id="<%-preffix%>[<%=i%>].NameImage" class="field_status required" />
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<label class="control-label attardi-input">
						<span>Middle Initial</span>
						<input class="form_field director_name_part" id="<%-preffix%>[<%=i%>].Middle" name="<%-preffix%>[<%=i%>].Middle" type="text" value="<%- director.Middle %>" />
					</label>
					<img id="<%-preffix%>[<%=i%>].MiddleImage" class="field_status" />
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<label class="control-label attardi-input">
						<span>Surname</span>
						<input class="form_field director_name_part" id="<%-preffix%>[<%=i%>].Surname" name="<%-preffix%>[<%=i%>].Surname" type="text" value="<%- director.Surname %>" />
					</label>
					<img id="<%-preffix%>[<%=i%>].SurnameImage" class="field_status required" />
				</div>
			</div>

			<div class="form_field_container GenderCtrl">
				Gender
				<input class="director_gender" <%if(director.Gender == 'M'){%>checked="checked"<%}%> type="radio" name="<%-preffix%>[<%=i%>].Gender" value="M" id="<%-preffix%>[<%=i%>].GenderCtrl_M"><label for="<%-preffix%>[<%=i%>].GenderCtrl_M">Male</label>
				<input class="director_gender" <%if(director.Gender == 'F'){%>checked="checked"<%}%> type="radio" name="<%-preffix%>[<%=i%>].Gender" value="F" id="<%-preffix%>[<%=i%>].GenderCtrl_F"><label for="<%-preffix%>[<%=i%>].GenderCtrl_F">Female</label>
				<img id="<%-preffix%>[<%=i%>].GenderImage" class="field_status required"/>
			</div>

			@EzForm.DateInput("<%-preffix%>[<%=i%>].DateOfBirth", "Date of Birth", css: "director_date", required: true, statusIcon: true)

			@EzForm.AddressInput("<%-preffix%>Address<%=i%>", "Address")
		</div>
	<%
	})
	%>
</script>

<script id="director-hidden-template" type="text/template">
	<%_.each(directors, function(director, i){%>
		<input type="hidden" name="<%-preffix%>[<%=i%>].Name" value="<%- director.Name %>"/>
		<input type="hidden" name="<%-preffix%>[<%=i%>].Middle" value="<%- director.Middle %>"/>
		<input type="hidden" name="<%-preffix%>[<%=i%>].Surname" value="<%- director.Surname %>"/>
		<input type="hidden" name="<%-preffix%>[<%=i%>].DateOfBirth" value="<%- director.DateOfBirth %>"/>
	<%});%>
</script>

