@using EzBob.Web.Models.Strings
@model dynamic
@helper PersonalInfo() {
	<div class="row-fluid">
		<h2 class="form_start">Personal Information</h2>
		<div>
			@using (Html.BeginForm("Save", "CustomerDetails", new { Area = "Customer" }, FormMethod.Post, new { @class = "CompanyDetailForm" })) {
				<div class="control-group form_field_container">
					<div class="controls">
						<label class="attardi-input"><span>First Name</span>
							<input class="form_field" type="text" id="FirstName" name="FirstName" value="<%- CustomerPersonalInfo ? CustomerPersonalInfo.FirstName : '' %>" />
						</label>
						<img id="FirstNameImage" class="field_status required"/>
					</div>
				</div>

				<div class="control-group form_field_container">
					<div class="controls">
						<label class="attardi-input"><span>Middle Name</span>
							<input type="text" id="MiddleInitial" name="MiddleInitial" value="<%- CustomerPersonalInfo ? CustomerPersonalInfo.MiddleInitial : '' %>" class="form_field" />
						</label>
						<img id="MiddleNameImage" class="field_status"/>
					</div>
				</div>

				<div class="control-group form_field_container">
					<div class="controls">
						<label class="attardi-input"><span>Last Name</span>
							<input id="Surname" type="text" name="Surname" value="<%- CustomerPersonalInfo ? CustomerPersonalInfo.Surname : '' %>" class="form_field" />
						</label>
						<img id="SurnameImage" class="field_status required"/>
					</div>
				</div>
				<input type="hidden" name="Fullname" value="<%- CustomerPersonalInfo ? CustomerPersonalInfo.Fullname : '' %>" />

				<div class="form_field_container GenderCtrl">
					Gender
					<input type="radio" name="Gender" value="M" id="GenderCtrl_M"><label for="GenderCtrl_M">Male</label>
					<input type="radio" name="Gender" value="F" id="GenderCtrl_F"><label for="GenderCtrl_F">Female</label>
					<img id="GenderImage" class="field_status required"/>
				</div>

				@EzForm.DateInput("DateOfBirth", "Date of Birth", required: true, statusIcon: true)

				<div class="control-group form_field_container">
					<div class="controls">
						<label class="control-label attardi-input"><span>Martial Status</span>
							<select class="form_field" id="MartialStatus" name="MartialStatus">
								<option></option>
								<option value="Single">Single</option>
								<option value="Married">Married</option>
								<option value="Divorced">Divorced</option>
								<option value="Widow/er">Widow/er</option>
								<option value="Other">Other</option>
							</select>
						</label>
						<img id="MartialStatusImage" class="field_status required"/>
					</div>
				</div>

				<h2 class="form_section">Residential Address</h2>

				@EzForm.AddressInput("PersonalAddress", "Residential Address")

				<div class="control-group form_field_container">
					<div class="controls">
						<label class="control-label attardi-input">
							<span>Length of Time at Address</span>
							<select id="TimeAtAddress" name="TimeAtAddress" class="TimeAtAddress select form_field">
								<option selected="selected" value=""></option>
								<option value="1">1 year</option>
								<option value="2">2 years</option>
								<option value="3">More than 3 years</option>
							</select>
						</label>
						<img id="TimeAtAddressImage" class="field_status required"/>
					</div>
				</div>

				@EzForm.AddressInput("PrevPersonAddresses", "Previous Address", "canDisabledAddress")

				<div class="control-group form_field_container">
					<div class="controls">
						<label class="control-label attardi-input">
							<span>Residential Status</span>
								<select id="ResidentialStatus" name="ResidentialStatus" class="select form_field">
									<option></option>
									<option value="Home owner">Home owner</option>
									<option value="Renting">Renting</option>
									<option value="Living with parents">Living with parents</option>
								</select>
						</label>
						<img id="ResidentialStatusImage" class="field_status required"/>
					</div>
				</div>

				<h2 class="form_section">Contact Details</h2>

				<div class="control-group form_field_container">
					<div class="controls">
						<label class="control-label attardi-input">
							<span>Best Contact Number</span>
							<input type="text" class="phonenumber form_field" id="DayTimePhone" name="DayTimePhone" value="<%- CustomerPersonalInfo ? CustomerPersonalInfo.DayTimePhone : '' %>" />
						</label>
						<img id="DayTimePhoneImage" class="field_status required"/>
					</div>
				</div>

				<div class="control-group form_field_container">
					<div class="controls">
						<label class="control-label attardi-input">
							<span>Additional Contact Number</span>
							<input type="text" class="phonenumber form_field" name="MobilePhone" id="MobilePhone" value="<%- CustomerPersonalInfo ? CustomerPersonalInfo.MobilePhone : '' %>" />
						</label>
						<img id="MobilePhoneImage" class="field_status required"/>
					</div>
				</div>

				<h2 class="form_section">Company Information</h2> 

				<div class="control-group typeOfBussiness form_field_container">
					<div class="controls">
						<label class="attardi-input">
							<span>Type of Business</span>
							<select class="form_field" id="TypeOfBusiness" name="TypeOfBusiness">
								<option value=""></option>
								<option value="Entrepreneur">Sole Trader (not Inc.)</option>
								<option value="SoleTrader">Sole Trader (Inc.)</option>
								<option value="PShip3P">Partnership (Up to 3)</option>
								<option value="PShip">Partnership (More than 3)</option>
								<option value="Limited">Limited Company</option>
								<option value="LLP">LLP</option>
							</select>
						</label>
						<img id="TypeOfBusinessImage" class="field_status required"/>
					</div>
				</div>

				<div class="control-group form_field_container">
					<div class="controls cashControlls">
						<label class="attardi-input">
							<span>Total Online Sales (£)</span>
							<input id="OverallTurnOver" name="OverallTurnOver" type="text" class="cashInput form_field" />
						</label>
						<img id="OverallTurnOverImage" class="field_status required"/>
					</div>
				</div>

				<div class="control-group form_field_container">
					<div class="controls cashControlls">
						<label class="attardi-input">
							<span>Total Online & Offline Sales (£)</span>
							<input id="WebSiteTurnOver" name="WebSiteTurnOver" type="text" class="cashInput form_field" />
						</label>
						<img id="WebSiteTurnOverImage" class="field_status required" />
					</div>
				</div>

				<div class="control-group form_read_and_accept">
					<hr />
					<div class="controls">
						<input id="ConsentToSearch" name="ConsentToSearch" type="checkbox" value="false" />
						<label for="ConsentToSearch" class="editor-label-with-checkbox"> I have read and accept the <a>terms and conditions</a> of the credit bureau search</label>
					</div>
				</div>
		}
		</div>

		<div class="form_buttons_container">
			<a href="#" class="btn-continue button orange btn-next disabled continue">Complete</a>
		</div>
	</div>
}
@helper Director() {
	<div>
		<h2 class="form_section">Additional Directors (Optional)</h2>

		<div class="directorArea"></div>

		<div class="add-director-container">
			<div class="wizard-director-text">EZBOB assumes that you are a director in the Company.</div>
			<div class="wizard-director-text">Adding additional directors can improve your chances of getting an offer.</div>

			<input id="addDirector" class="btn green" type="button" value="Add directors" />
		</div>
	</div>
}

