<script type="text/template" id="request-processing-approved-template">
	<div class="automation-popup">
		@AutomationPopupHeader()
		<div class="automation-popup-content">
			<h4><strong><%-name%>, Congratulations</strong></h4>
			<span>Your credit is approved and can be taken</span>
			<hr/>
			<div>Available Credit</div>
			<div class="well">Up to <%-amount%></div>
			<div>Offer Valid for</div>
			<div class="well offerValidFor"></div>
			<div class="alignright" style="padding: 0 10px 0 0;">
				<button onclick="javascript:$.colorbox.close(); return false;" class="button btn-green pull-right" ui-event-control-id="profile:request-processing-reject-haschance-popup-continue">Continue</button>
			</div>
			<div class="clear"></div>
			<br />
		</div>
	</div>
</script>

@helper AutomationPopupHeader() { 
	switch ((CustomerOriginEnum)ViewBag.CustomerOrigin.GetOrigin()) {
		case CustomerOriginEnum.everline:
			<header class="everline_header">
				<nav>
					<div class="pin"><span></span></div>
					<span class="everlinelogo svg"></span>
				</nav>
			</header>
			break;
		default:
		<div id="header">
			<div class="header-bg-strip"></div>
			<div class="header-inner">
				<div class="header-logo">
					<div class="newlogo"></div>
				</div>
				<div class="header-info" style="display: none;">
					<div class="header-info-left"></div>
					<div class="header-info-text-popup">Request processing</div>
					<div class="header-info-right"></div>
				</div>
			</div>
		</div>
		break;
	}
}
