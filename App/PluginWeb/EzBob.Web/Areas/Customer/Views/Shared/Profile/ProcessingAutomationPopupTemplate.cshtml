@using EZBob.DatabaseLib.Model.Database
<script type="text/template" id="request-processing-template">
	<div class="automation-popup">
		@AutomationPopupHeader()
		
		<div class="automation-popup-content">
			<h3>We are processing your application</h3>
			<h4><strong>Please hold for up to <%-automationTimeout%> seconds...</strong></h4>
			<div>There is a good chance you will get an immediate answer</div>
			
			<div class="progress progress-striped progress-success active automation-processing">
				<div class="bar automation-processing-bar" style="width: 0%;"></div>
			</div>
			<div class="alignright" style="padding: 0 10px 0 0;">
				<button onclick="javascript:$.colorbox.close(); return false;" class="button btn-green pull-right" ui-event-control-id="profile:request-processing-popup-continue">Continue</button>
			</div>
			<div class="clear"></div>
			<br />
		</div>
	</div>
</script>

