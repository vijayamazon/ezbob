@model dynamic
@helper BankAccountInstruction() {
	<div class="row-fluid">
		<div class="wizard-top-notification">
			<h2>Your Bank Details</h2>
		</div>
		<form id="bankAccount">
			<div class="bank-account-instructions clearfix">
				<div class="bank-account">
					<div class="control-group">
						<div class="controls">
							<label class="control-label attardi-input">
								<span>Account number</span>
								<input id="AccountNumber" name="AccountNumber" type="text" value="" autofocus="autofocus" class="AccountNumber" maxlength="8" />
							</label>
							<img class="field_status required" id="AccountNumberImage" />
						</div>
					</div>

					<div class="control-group" id="SortCode">
						<div class="controls">
							<label class="attardi-input">
								<span>Sort Code</span>
								<input class="input-small form_field_look SortCode" id="SortCode1" name="SortCode1" nextserial="#SortCode2" type="text" maxlength="2" />
							</label>
							-
							<label class="attardi-input">
								<span></span>
								<input class="input-small form_field_look SortCode" id="SortCode2" name="SortCode2" nextserial="#SortCode3" type="text" maxlength="2" />
							</label>
							-
							<label class="attardi-input">
								<span></span>
								<input class="input-small form_field_look SortCode" id="SortCode3" name="SortCode3" type="text" maxlength="2" />
							</label>

							<img class="field_status required" id="SortCodeImage" />

							<input type="hidden" class="SortCodeSplit" name="SortCode" id="SortCodeSplit" />
						</div>
					</div>

					<div class="control-group">
						<div class="controls">
							<input type="radio" name="bankAccountType" id="baPersonal" value="Personal" checked><label class="for-radio" for="baPersonal">Personal</label>
							<input type="radio" name="bankAccountType" id="baBusiness" value="Business"><label class="for-radio" for="baPusiness">Business </label>
						</div>
					</div>

					<div class="control-panel-and-bank-details">
						<div class="control-group clearfix">
							<a href="#" class="button orange connect-bank disabled pull-right">Continue</a>
							<a href="#" class="back button grey pull-right">Back</a>
						</div>

						<h3>Where do I find my bank details?</h3>
						<img src='@Url.Content("~/Content/img/bank_details.png")' alt="Bank details." />
					</div>
				</div>
			</div>
		</form>
		@{Html.RenderPartial("_SecureDisclaimer");}
	</div>
}
<script id="bank-account-instructions" type="text/template">
	@BankAccountInstruction()
</script>
