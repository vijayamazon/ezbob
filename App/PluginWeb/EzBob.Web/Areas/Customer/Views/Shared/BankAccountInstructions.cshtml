@model dynamic
@helper BankAccountInstruction() {
	<div class="row-fluid">
		<div class="wizard-top-notification">
			<h2>Your Bank Details</h2>
		</div>
		<form id="bankAccount">
			<div class="bank-account-instructions clearfix">
				<div class="bank-account">
					<div class="control-group form_field_container">
						<div class="controls">
							<label class="attardi-input">
								<span>Account number</span>
							    <input id="AccountNumber" name="AccountNumber" type="text" value="" autofocus="autofocus" class="AccountNumber form_field" maxlength="8" />
                                <img class="field_status required" id="AccountNumberImage" />
							</label>
						</div>
					</div>

					<div class="control-group form_field_container" id="SortCode">
						<div class="controls ezSortCode">
							<label class="attardi-input">
								<span>Sort Code</span>
							    <input class="form_field_look" id="SortCode1"  nextserial="#SortCode2" type="text" maxlength="2" style="width: 32%;" />
                                <span></span>
							    <input class="form_field_look" id="SortCode2" nextserial="#SortCode3" type="text" maxlength="2" style="width: 32%;"/>
                                <span></span>
							    <input class="form_field_look" id="SortCode3" type="text" maxlength="2" style="width: 31%;"/>
                                <img class="field_status required" id="SortCodeImage" />
							</label>
                            <input class="SortCodeSplit hidden-field" name="SortCode" id="SortCodeSplit" style="display: none !important;" />
							
						</div>
					</div>

					<div class="control-group">
						<div class="controls">
							<input type="radio" name="bankAccountType" id="baPersonal" value="Personal" checked><label class="for-radio" for="baPersonal">Personal</label>
							<input type="radio" name="bankAccountType" id="baBusiness" value="Business"><label class="for-radio" for="baPusiness">Business </label>
						</div>
					</div>

					<div class="form_buttons_container">
						<div class="attardi-button">
							<a href="#" class="button orange connect-bank disabled pull-right">Continue</a>
							<a href="#" class="back button grey pull-right">Back</a>
						</div>
					</div>
				</div>
			</div>
		</form>
		<hr>
        <div class="help_security"></div>
	</div>
}
<script id="bank-account-instructions" type="text/template">
	@BankAccountInstruction()
</script>
