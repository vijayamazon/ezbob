@using System.Collections.Generic
@using EzBob.Web.Infrastructure.Html
@model dynamic

<script type="text/template" id="add-investor-template">
	@UnderwriterSidebar.Menu(this, UnderwriterSidebar.SideBarType.Investor, Model.IsEscalated)
	<div id="main-content">
		<div class="page-title">
			<div>
				<h1>This is for adding investor</h1>
			</div>
		</div>
		<div class="col-md-12">
			<div class="box">
				<div class="box-content">
					<form id="add-investor-form" class="form-horizontal">
						<div class="row">
							<div class="col-md-6">

								<h4>Investor</h4>
								<!--Investor fields-->
								@EzForm.InputTextUnderwriter(this, "CompanyName", "Company name", null)
								@EzForm.SelectAdvanced("InvestorType", "Type", new Dictionary<string, string>(), "Investor type")

								<h4>Investor primary contact</h4>
								<!--Investor contact fields-->
								@EzForm.InputTextUnderwriter(this, "ContactPersonalName", "Contact personal name", null)
								@EzForm.InputTextUnderwriter(this, "ContactLastName", "Contact last name", null)
								@EzForm.InputTextUnderwriter(this, "ContactEmail", "Contact email", null)
								@EzForm.InputTextUnderwriter(this, "Role", "Role", null)
								@EzForm.InputTextUnderwriter(this, "ContactMobile", "Mobile", null)
								@EzForm.InputTextUnderwriter(this, "ContactOfficeNumber", "Office number", null)
								@EzForm.InputTextUnderwriter(this, "Comment", "Comment", null)
								<!--Is Primary = 1-->

								<h4>Investor bank details</h4>
								<!--Investor bank details-->
								@EzForm.SelectAdvanced("InvestorBankAccountType", "Bank account type", new Dictionary<string, string>(), "Bank account type")
								@EzForm.InputTextUnderwriter(this, "BankSortCode", "Bank sort code", null)
								@EzForm.InputTextUnderwriter(this, "BankAccountNumber", "Bank account number", null)
								@EzForm.InputTextUnderwriter(this, "BankAccountName", "Bank account name", null)
								@EzForm.InputTextUnderwriter(this, "BankSortCode", "Bank sort code", null)

								<div class="control-group">
									<label class="control-label"></label>
									<div class="control">
										<label class="checkbox">
											<input type="checkbox" value="">
											Is repayments account identical
										</label>

									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<button class="btn btn-primary apply pull-right">Submit</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</script>
