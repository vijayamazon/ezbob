@model EzBob.Web.Areas.Underwriter.Models.SalesForceModel

@{
    ViewBag.Title = "SalesForce";
    Layout = "~/Areas/Underwriter/Views/Shared/_LayoutSalesForce.cshtml";
}

@if (Model == null) {
    <div>customer not found</div>
} else {
    <div role="tabpanel">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs nav-pills" role="tablist" id="salesforce_tabs">
            <li role="presentation" class="active"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab"><i class="fa fa-user"></i> Profile</a></li>
            <li role="presentation"><a href="#datasources" aria-controls="datasources" role="tab" data-toggle="tab"><i class="fa fa-shopping-cart"></i> Data Sources</a></li>
            <li role="presentation"><a href="#loans" aria-controls="loans" role="tab" data-toggle="tab"><i class="fa fa-history" title="Loan history"></i> Loans</a></li>
            <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab"><i class="fa fa-file-text-o"></i> Messages</a></li>
            <li role="presentation"><a href="#fraud" aria-controls="fraud" role="tab" data-toggle="tab"><i class="fa fa-exclamation-triangle"></i> Fraud</a></li>
            <li role="presentation"><a href="#crm" aria-controls="crm" role="tab" data-toggle="tab"><i class="fa fa-users"></i> Old CRM</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane  fade in active" id="profile">
                @ProfileDetails()
            </div>
            <div role="tabpanel" class="tab-pane fade" id="datasources">
                @DataSources()
            </div>
            <div role="tabpanel" class="tab-pane fade" id="loans">
                @Loans()
            </div>
            <div role="tabpanel" class="tab-pane fade" id="messages">
                @Messages()
            </div>
            <div role="tabpanel" class="tab-pane fade" id="fraud">
                @Fraud()
            </div>
            <div id="crm" class="tab-pane fade">
                @Crm()
            </div>
        </div>
    </div>
}

@helper ProfileDetails() {
    <div>
        @Description("ID", Model.PersonalModel.ID.ToString())
        @Description("Email", Model.PersonalModel.Email)
        @Description("Name", Model.PersonalModel.Name)
        @Description("FraudStatus", Model.PersonalModel.FraudStatus)
        @Description("CreditStatus", Model.PersonalModel.CreditStatus)
        @Description("Experian score", Model.PersonalModel.ExperianScore.ToString())
        @Description("Aml Score", Model.PersonalModel.AmlScore.ToString())
        @Description("Aml Description", Model.PersonalModel.AmlDescription)

        @if (Model.Phones.Any()) {
            <dl class="dl-horizontal">
                <dt>Phones</dt>
                <dd>
                    <ul class="list-group col-sm-4 col-md-3">
                        @foreach (var phone in Model.Phones) {
                            string verified = "";
                            string verifiedTooltip = "";
                            if (phone.IsVerified) {
                                verified = "list-group-item-success";
                                verifiedTooltip = "Verified phone";
                            }
                            <li class="list-group-item no-border @verified" data-toggle="tooltip" data-placement="top" title="@verifiedTooltip"><span class="badge">@phone.Type</span>@phone.Number</li>
                        }
                    </ul>
                </dd>
            </dl>
        }
    </div>
}

@helper DataSources() {
    if (Model.MarketPlaces.Any()) {
        <h4>Data sources</h4>
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Created</th>
                    <th>Updated</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mp in Model.MarketPlaces) {
                    string error = string.IsNullOrEmpty(mp.UpdateError) ? "" : "danger";
                    <tr data-toggle="tooltip" data-placement="top" title="@mp.UpdateError" class="@error">
                        <td>@mp.MpName</td>
                        <td>@mp.displayName</td>
                        <td>@mp.Created</td>
                        <td>@mp.Updated</td>
                    </tr>
                }
            </tbody>
        </table>

        if (Model.CompanyFiles.Any()) {
            <h4>Financial documents</h4>
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>File Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cf in Model.CompanyFiles) {
                        <tr>
                            <td>@cf.FileName</td>
                            <td>@cf.Uploaded.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    } else {
        <h3>Customer don't have any data source connected</h3>
    }
}

@helper Loans() {
    if (Model.Loans.Any()) {
        <h4>Loans</h4>
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Date Applied</th>
                    <th>Status</th>
                    <th>Date Closed</th>
                    <th>Loan Amount</th>
                    <th>Outstanding</th>
                    <th>Repayments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model.Loans) {
                    <tr data-loanid="@loan.Id">
                        <td>@loan.DateApplied</td>
                        <td>@loan.Status</td>
                        <td>@loan.DateClosed</td>
                        <td>@loan.LoanAmount</td>
                        <td>@loan.Outstanding</td>
                        <td>@loan.Repayments</td>
                    </tr>
                }
            </tbody>
        </table>
    } else {
        <h3>Customer don't have any loan</h3>
    }

    if (Model.Decisions.Any()) {
        <h4>Decisions</h4>
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Action</th>
                    <th>Comment</th>
                    <th>Approved sum</th>
                    <th>Underwriter name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var decision in Model.Decisions) {
                    <tr data-decisionid="@decision.Id">
                        <td>@decision.Date</td>
                        <td>@decision.Action</td>
                        <td>@decision.Comment</td>
                        <td>@decision.ApprovedSum</td>
                        <td>@decision.UnderwriterName</td>
                    </tr>
                }
            </tbody>
        </table>
    } else {
        <h3>Customer don't have any decsions</h3>
    }
}

@helper Messages() {
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Date</th>
                <th>File Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model.Messages) {
                <tr>
                    <td>@message.CreationDate</td>
                    <td>@message.FileName</td>
                </tr>
            }
        </tbody>
    </table>
}

@helper Fraud() {
    <div>
        @Description("Check Date", Model.Fraud.LastCheckDate.HasValue ? Model.Fraud.LastCheckDate.Value.ToString("dd/MM/yyyy") : "Never performed a check")
        @if (Model.Fraud.LastCheckDate.HasValue && !Model.Fraud.FraudDetectionLogRows.Any()) {
            <strong>Not a fraud</strong>
        }
        @if (Model.Fraud.FraudDetectionLogRows.Any()) {
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Field</th>
                        <th>Concurrence</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fraudRow in Model.Fraud.FraudDetectionLogRows) {
                        <tr>
                            <td>@fraudRow.Type</td>
                            <td>@fraudRow.CurrentField</td>
                            <td>@fraudRow.Concurrence</td>
                            <td>@fraudRow.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}

@helper Crm() {
    if (Model.OldCrm.Any()) {
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Action</th>
                    <th>Status</th>
                    <th>User</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var crm in Model.OldCrm) {
                    <tr>
                        <td>@crm.DateTime.ToString("dd/MM/yyyy")</td>
                        <td>@crm.Type</td>
                        <td>@crm.Action</td>
                        <td>@crm.Status</td>
                        <td>@crm.User</td>
                        <td>@crm.Comment</td>
                    </tr>
                }
            </tbody>
        </table>
    } else {
        <h3>There is no old crm records</h3>
    }
}

@helper Description(string key, string value) {
    <dl class="dl-horizontal">
        <dt>@key</dt>
        <dd>@value</dd>
    </dl>
}