<script type="text/template" id="support-template">
    <table class="table table-bordered table-striped blue-header centered">
        <thead>
            @EzForm.RawHeaderCell("Marketplaces with error", "", "", "", "", "", "", "")
        </thead>
        <tbody>
            @EzForm.RawCellBold("#", "Marketplace Type", "Marketplace Name", "Update start date", "Error Message", "CustomerId", "Status", "")
            <%_.each(model, function(val, i){
             var disabled="";
             if(val.Status=="In progress") { disabled = "disabled"; }%>
                @EzForm.RawCell(
                         "<%-i+1%>",
                         "<b><%-val.Type%></b>",
                         "<%-val.Name%>",
                         "<%-val.UpdateStartDate%>",
                         "<pre><%-val.ErrorMessage%></pre>",
                         "<%-val.CustomerId%>",
                         "<%-val.Status%>",
                         "<a href='#' class='btn btn-mini btn-success reCheckMP <%- val.Name.toLowerCase() %> <%-disabled%>' umi='<%- val.Umi %>' marketplaceType='<%- val.Type %>'><i class='icon-refresh'></i>Recheck</a>")
            <%});%>
        </tbody>
    </table>
</script>
