<script id="collection-status-layout-template" type="text/template">
	<form id="collection-status-dialog" class="view-collection-status" action="/" method="POST">
		<input name="customerId" type="hidden" />
		<select id="collection-status-items" class="selectheight form-control">
			<%_.each(statuses, function(status){%>
				<option value="<%=status.Id%>"><%=status.Name%></option>
			<%});%>
		</select>
		<div id="collection-view">
		</div>
	</form>
</script>

<script id="collection-status-template" type="text/template">
	<div class="control-group">
		<label class="control-label">Description:</label>
		<div class="controls">
			<textarea class="form-control" id="collectionDescription" name="collectionDescription" maxlength="500" />
		</div>
	</div>
	
	<div class="control-group amount_status" style="display: none">
		<label class="control-label">Amount:</label>
		<div class="controls">
			<input type="text" class="form-control" id="collectionAmount" name="Amount" value="0"/>
		</div>
	</div>

	<div class="control-group type_status" style="display: none">
		<label class="control-label">Type:(court/sheriff for bailiff, home/salary for charging order)</label>
		<div class="controls">
			<input type="text" class="form-control" id="collectionType" name="Type" />
		</div>
	</div>

	<div class="control-group apply_for_judgment_status" style="display: none">
		<label class="control-label">Apply for judgment date:</label>
		<div class="controls">
			<input type="text" class="form-control" id="collectionApplyForJudgmentDate" name="ApplyForJudgmentDate" />
		</div>
	</div>

	<div class="control-group feedback_status" style="display: none">
		<label class="control-label">Feedback:</label>
		<div class="controls">
			<textarea class="form-control" id="collectionFeedback" name="Feedback" />
		</div>
	</div>
    
    <div class="control-group disable_status" style="display: none">
        <div class="controls">
            <label for="collectionChangeEmail" class="editor-label-with-checkbox checkbox">
                <input id="collectionChangeEmail" name="ChangeEmail" type="checkbox" value="true" />Change email to Frozen
            </label>
        </div>
    </div>
    
    <div class="control-group disable_status" style="display: none">
        <div class="controls">
            <label for="collectionChangeEmail" class="editor-label-with-checkbox checkbox">
                <input id="collectionUnsubscribe" name="Unsubscribe" type="checkbox" value="true" />Unsubscribe from MailChimp
            </label>
        </div>
    </div>

	<label class="default_status red_cell" style="display: none">
		Saving this status will also effect the loan options
	</label>
	<br/>
	<a href="#" class="uploadFiles btn btn-primary">Upload files</a>
</script>


