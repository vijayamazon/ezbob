@model dynamic

<script id="loan_editor_edit_fee_template" type="text/template">
    <form id="fee-edit-form" class="form-horizontal">
        <legend></legend>
    
        <div class="control-group">
            <label class="control-label">Date:</label>
            <div class="controls controls-row">
                <div class="input-append" style="margin-bottom: 10px;">
                    <input type="text" id="fee-edit-date" name="date" style="width: 100px">
                    <span class="add-on">
                        <i class="fa fa-calendar"></i>
                    </span>
                </div>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Fee Amount:</label>
            <div class="controls controls-row">
                <input type="text" id="fee-edit-amount" name="fees" class="span2">
            </div>
        </div>
        
        <div class="control-group">
            <label class="control-label">Description:</label>
            <div class="controls controls-row">
                <textarea id="fee-edit-description" name="description" class="span2"/>
            </div>
        </div>

        <div class="row-fluid">
            <button class="btn btn-primary cancel pull-right" >Cancel</button>
            <button class="btn btn-primary apply pull-right" style="margin-right: 10px;">Apply</button>
        </div>
    </form>
</script>