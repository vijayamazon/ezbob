@model dynamic

<script id="loan_editor_edit_installment_template" type="text/template">
    <form id="installment-edit-form" class="form-horizontal">
        <legend></legend>
        
        <div class="control-group">
            <label class="control-label">Date:</label>
            <div class="controls controls-row">
                <div class="input-append" style="margin-bottom: 10px;float: left;">
                    <input type="text" id="installment-edit-date" name="date" style="width: 100px;">
                    <span class="add-on">
                        <i class="icon-calendar"></i>
                    </span>
                </div>

                <% if (!IsAdding) {%>
                    <label class="checkbox shift-installments span5">
                        <input type="checkbox" value="">
                            Shift Dates for all subsequent installments
                    </label>
                <%}%>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Principal:</label>
            <div class="controls">
                <input type="text" id="installment-edit-repaymentAmount" name="loanRepayment" data-content="Principal, that customer stiil needs to pay." class="span2">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Total:</label>
            <div class="controls">
                <input type="text" id="installment-edit-totalAmount" name="totalRepayment" data-content="Total amount to pay." class="span2">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Balance:</label>
            <div class="controls">
                <input type="text" id="installment-edit-balance" name="balance" data-content="The Balance of loan, that is expected to be after succesfull payment." class="span2">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Interest Rate:</label>
            <div class="controls controls-row">
                <input type="text" id="installment-edit-interestRate" name="interestRate" class="span2">
                <% if (!IsAdding) {%>
                    <label class="checkbox shift-rates span5">
                        <input type="checkbox" value="">
                            Shift Interest Rates for all subsequent installments
                    </label>
                <%}%>
            </div>
        </div>

        <div class="row-fluid">
            <button class="btn cancel pull-right">Cancel</button>
            <button class="btn btn-primary apply pull-right" style="margin-right: 10px;">Apply</button>            
        </div>
    </form>
</script>