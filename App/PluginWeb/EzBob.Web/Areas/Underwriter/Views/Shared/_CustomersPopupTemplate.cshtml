<script type="text/template" id="profile-popup-view-template" >
    @ProfilePopup()
</script>

@helper ProfilePopup(){
<text>
<%
    var mps = mps || {};
%>
</text>
    <div class="modal-header">
        <h3 id="myModalLabel"><%=title%></h3>
    </div>
    
    <div class="modal-body">
        <b>Customer ID: </b> <%-cid%> <br/>
        <b>Customer Full Name:  </b> <%-cName%> <br/>
        <hr/>

        <table class="table">
            <thead class="box">
                <tr class="box-title">
                    <th>#</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Recheck</th>
                </tr>
            </thead>
            <tbody>
                <%_.each(mps, function(val,i){%>
                <tr>
                    <td><%-i+1%></td>
                    <td>
                        <div  style="width: 145px; overflow-x: auto; height: 100%">
                            <%-val.Name%>
                        </div>
                    </td>
                    <td><%-val.Type%></td>
                    <td><%-val.Status%></td>
                    <td><%-EzBob.formatDateTime(val.StartTime) || "-"%></td>
                    <td><%-EzBob.formatDateTime(val.EndTime) || "-"%></td>
                    <td>
                        <% if (val.Type != "Yodlee"){%>
                        <div  class="pull-right">
                            <button class="recheck-mp btn btn-primary <%-val.Status =='Updating' ? 'disabled' : '' %>" data-mp-id="<%-val.id%>">
                                <i class="fa fa-repeat"></i> Recheck
                            </button>
                        </div>
                        <%} else {%>
                        <div  class="pull-right">
                            <a href='@Url.Action("TryRecheckYodlee","MarketPlaces", new { Area = "Underwriter" }, "https")/?umi=<%-val.id%>' target="_blank" class="recheck-yodlee btn btn-primary <%-val.Status =='Updating' ? 'disabled' : '' %>" data-mp-id="<%-val.id%>">
                                <i class="fa fa-repeat"></i>Try Recheck
                            </a>
                        </div>
                        <%}%>
                    </td>
                </tr>
                <%});%>
            </tbody>
        </table>
        
        <hr/>
        <table class="table">
            <thead class="box">
                <tr class="box-title">
                    <th>Name</th>
                    <th>Status</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Recheck</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Main Strategy</td>
                    <td><%-sm.StrategyStatus%></td>
                    <td><%-EzBob.formatDateTime(sm.StartTime) || "-"%></td>
                    <td><%-EzBob.formatDateTime(sm.EndTime) || "-"%></td>
                    <td>
                        <div  class="pull-right">
                            <button id="recheck-main-strat" class="btn btn-primary <%-(sm == null || sm.StrategyStatus =='Running' || isWizardFinished === false) ? 'disabled' : '' %>">
                                <i class="fa fa-repeat"></i> Recheck
                            </button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}