@model dynamic

<script type="text/template" id="bug-report-template">
    <div class="modal-header">
        <h3 id="myModalLabel">Report Bug</h3>
    </div>
        
    <div class="modal-body">
        <textarea name="description" style="width: 500px; max-width: 500px;" rows="7"/>
    </div>
        
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button class="btn btn-primary button-upload">Save</button>
    </div>
    
</script>

<script type="text/template" id="bug-edit-template">
    <div class="modal-header">
        <h3 id="myModalLabel">Edit Bug</h3>
    </div>
        
    <div class="modal-body">
        <div class="control-group">
            <label>Underwriter Opened: <%-UnderwriterOpenedName%></label>
        </div>
        <div class="control-group underwriter-closed">
            <label>Underwriter Closed: <%-UnderwriterOpenedName%></label>
        </div>
        <div class="control-group">
            <label>Date Opened: <%-EzBob.formatDate(DateOpened)%></label>
        </div>
        <div class="control-group">
            <label>Text Opened:</label>
            <div class="controls">
                <textarea rows="7" style="width: 500px; max-width: 500px;" name="description"></textarea>
            </div>
        </div>
        <div class="control-group">
            <label>Text Closed:</label>
            <div class="controls">
                <textarea rows="7" style="width: 500px; max-width: 500px;" name="closeDescription"></textarea>
            </div>
        </div>
    </div>
        
    <div class="modal-footer">
        <button class="btn btn-danger">Close</button>
        <button class="btn btn-warning">ReOpen</button>
        <button class="btn btn-primary">Save</button>
    </div>    
</script>