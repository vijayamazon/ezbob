@model dynamic

<script id="pricing-model-calculation-template" type="text/template">
    <div class="row-fluid">
        <div class="span6">
            <table class="table">
                <thead class="box">
                    <tr class="box-title">
                        <th>Model inputs</th>
                        <th>Values</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="pricing-model-left-td">Loan Amount</td>
                        <td><input type="text" id="loanAmount"/></td>
                    </tr>
                    <tr>
                        <td class="pricing-model-left-td">Default Rate</td>
                        <td><%-model.DefaultRate%>%&nbsp;Company:<input type="text" id="defaultRateCompanyShare" class="pricing-model-double-input-width"/> Applicant:<input type="text" id="defaultRateCustomerShare" class="pricing-model-double-input-width"/></td>
                    </tr>
                    <tr>
                        <td class="pricing-model-left-td">Setup Fee</td>
                        <td><input type="text" id="setupFeePercents" class="pricing-model-double-input-width"/> = <input type="text" id="setupFeePounds" class="pricing-model-double-input-width"/></td>
                    </tr>
                    <tr>
                        <td class="pricing-model-left-td">Loan Term</td>
                        <td><input type="text" id="loanTerm"/></td>
                    </tr>

                    <tr class="minor-input-row hide">
                        <td class="pricing-model-left-td">Interest Only Period</td>
                        <td><input type="text" id="interestOnlyPeriod"/></td>
                    </tr>
                    <tr class="minor-input-row hide">
                        <td class="pricing-model-left-td">Tenure</td>
                        <td><input type="text" id="tenurePercents" class="pricing-model-double-input-width"/> = <input type="text" id="tenureMonths" class="pricing-model-double-input-width-wider"/></td>
                    </tr>
                    <tr class="minor-input-row hide">
                        <td class="pricing-model-left-td">Collection Rate</td>
                        <td><input type="text" id="collectionRate"/></td>
                    </tr>
                    <tr class="minor-input-row hide">
                        <td class="pricing-model-left-td">COGS (incl. acq. costs)</td>
                        <td><input type="text" id="cogs"/></td>
                    </tr>
                    <tr class="minor-input-row hide">
                        <td class="pricing-model-left-td">Debt Percent Of Capital</td>
                        <td><input type="text" id="debtPercentOfCapital"/></td>
                    </tr>
                    <tr class="minor-input-row hide">
                        <td class="pricing-model-left-td">Cost Of Debt (incl. fees)</td>
                        <td><input type="text" id="costOfDebt"/></td>
                    </tr>
                    <tr class="minor-input-row hide">
                        <td class="pricing-model-left-td">Opex And Capex</td>
                        <td><input type="text" id="opexAndCapex"/></td>
                    </tr>
                    <tr class="minor-input-row hide">
                        <td class="pricing-model-left-td">Profit Markup As % Of Revenue</td>
                        <td><input type="text" id="profitMarkup"/></td>
                    </tr>

                    <tr>
                        <td class="pricing-model-left-td"><button class="btn btn-primary" id="expandCollapseInputsButton"><span id="expandInputsSign">+</span><span class="hide" id="collapseInputsSign">-</span></button></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="span6">
            <table class="table">
                <thead class="box">
                    <tr class="box-title">
                        <th>Model outputs</th>
                        <th>Values</th>
                        <th>AIR</th>
                        <th>APR</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="pricing-model-left-td">Monthly Interest Rate</td>
                        <td><%-EzBob.formatPercents(model.MonthlyInterestRate)%></td>
                        <td><%-EzBob.formatPercents(model.AnnualizedInterestRate)%></td>
                        <td><%-EzBob.formatPercents(model.Apr)%></td>
                    </tr>
                    <tr>
                        <td class="pricing-model-left-td">Eu Loan Monthly Interest Rate</td>
                        <td><%-EzBob.formatPercents(model.EuLoanPercentages)%></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td class="pricing-model-left-td setup-fee-eu-2 <%-model.SetupFee2Class%>">Setup Fee For Eu Loan (2%)</td>
                        <td class="<%-model.SetupFee2Class%>"><%-EzBob.formatPercents(model.SetupFeeForEuLoanHigh)%></td>
                        <td class="<%-model.SetupFee2Class%>"><%-EzBob.formatPercents(model.AnnualizedInterestRateEu2)%></td>
                        <td class="<%-model.SetupFee2Class%>"><%-EzBob.formatPercents(model.AprEu2)%></td>
                    </tr>
                    <tr>
                        <td class="pricing-model-left-td <%-model.SetupFee175Class%>">Setup Fee For Eu Loan (1.75%)</td>
                        <td class="<%-model.SetupFee175Class%>"><%-EzBob.formatPercents(model.SetupFeeForEuLoanLow)%></td>
                        <td class="<%-model.SetupFee175Class%>"><%-EzBob.formatPercents(model.AnnualizedInterestRateEu175)%></td>
                        <td class="<%-model.SetupFee175Class%>"><%-EzBob.formatPercents(model.AprEu175)%></td>
                    </tr>

                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td pricing-model-bold">Revenue</td>
                        <td class="pricing-model-bold"><%-GBPValues(model.Revenue, true)%></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td pricing-model-italic">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;including:</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Interest Revenue</td>
                        <td><%-GBPValues(model.InterestRevenue, true)%></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Fees Revenue</td>
                        <td><%-GBPValues(model.FeesRevenue, true)%></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td">COGS (incl. acq. costs)</td>
                        <td class="pricing-model-underline">&nbsp;&nbsp;&nbsp;<%-GBPValues(model.CogsOutput, true)%>&nbsp;&nbsp;&nbsp;</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td pricing-model-bold">Gross Profit</td>
                        <td class="pricing-model-bold"><%-GBPValues(model.GrossProfit, true)%></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td">Opex And Capex</td>
                        <td class="pricing-model-underline">&nbsp;&nbsp;&nbsp;<%-GBPValues(model.OpexAndCapexOutput, true)%>&nbsp;&nbsp;&nbsp;</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td pricing-model-bold">EBITDA</td>
                        <td class="pricing-model-bold"><%-GBPValues(model.Ebitda, true)%></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td">Net Loss From Defaults</td>
                        <td><%-GBPValues(model.NetLossFromDefaults, true)%></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td">Cost Of Debt (incl. fees)</td>
                        <td><%-GBPValues(model.CostOfDebtOutput, true)%></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td pricing-model-italic">Note: Total Cost</td>
                        <td class="pricing-model-italic pricing-model-underline">&nbsp;&nbsp;&nbsp;<%-GBPValues(model.TotalCost, true)%>&nbsp;&nbsp;&nbsp;</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr class="minor-output-row hide">
                        <td class="pricing-model-left-td pricing-model-bold">Profit Before Tax</td>
                        <td class="pricing-model-bold"><%-GBPValues(model.ProfitMarkupOutput, true)%></td>
                        <td></td>
                        <td></td>
                    </tr>

                    <tr>
	                    <td class="pricing-model-left-td"><button class="btn btn-primary" id="expandCollapseOutputsButton"><span id="expandOutputsSign">+</span><span class="hide" id="collapseOutputsSign">-</span></button></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
	<button class="btn btn-primary" id="pricingModelResetButton">Reset</button>
	<button class="btn btn-primary pull-right" id="pricingModelCalculateButton">Calculate</button>

</script>