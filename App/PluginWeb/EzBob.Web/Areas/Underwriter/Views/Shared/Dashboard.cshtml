                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%}%>
    </div>

    <div class="table-ezbig">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="box">
                    <div class="box-title">
                        <h3>Journal</h3>
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-dashboard active journal-filter">
                                <input type="checkbox" id="allJournal" checked="checked">All</label>
                            <label class="btn btn-dashboard journal-filter">
                                <input type="checkbox" id="manualDecision">Manual Decisions</label>
                            <label class="btn btn-dashboard journal-filter">
                                <input type="checkbox" id="systemDecision">System Decision</label>
                            <label class="btn btn-dashboard journal-filter">
                                <input type="checkbox" id="loanAction">Loan taken/repaid</label>
                            <label class="btn btn-dashboard journal-filter">
                                <input type="checkbox" id="uwNotes">Underwriter notes</label>
                            <label class="btn btn-dashboard journal-filter">
                                <input type="checkbox" id="crmNotes">Customer care & sales</label>
                        </div>
                        @BoxTools("Journal", "#customerRelations")
                    </div>
                    <div class="box-content">

