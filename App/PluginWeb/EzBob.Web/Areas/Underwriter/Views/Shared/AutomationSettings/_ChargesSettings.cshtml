@model dynamic

<script type="text/template" id="charges-settings-template">
    @ChargesSettings()
</script>

@helper ChargesSettings()
{
    <form>
        <div class="alert-block">    
            <table class="table squeezed">
                <thead class="box">
                    <tr class="box-title">
                        <th colspan="3">Charge Settings</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>LatePaymentCharge: </td>
                        <td><input name="latePaymentCharge" class="input-large"/></td>
                        <td ><%- LatePaymentChargeDesc %></td>
                    </tr>                    
                    <tr>
                        <td>RolloverCharge: </td>
                        <td><input name="rolloverCharge" class="input-large"/></td>
                        <td ><%- RolloverChargeDesc %></td>
                    </tr>                    
                    <tr>
                        <td>PartialPaymentCharge: </td>
                        <td><input name="partialPaymentCharge" class="input-large"/></td>
                        <td><%- PartialPaymentChargeDesc %></td>
                    </tr>                    
                    <tr>
                        <td>AdministrationCharge: </td>
                        <td><input name="administrationCharge" class="input-large"/></td>
                        <td><%- AdministrationChargeDesc %></td>
                    </tr>                    
                    <tr>
                        <td>OtherCharge: </td>
                        <td><input name="otherCharge" class="input-large"/></td>
                        <td><%- OtherChargeDesc %></td>
                    </tr>
                    <tr>
                        <td>AmountToChargeFrom: </td>
                        <td><input name="amountToChargeFrom" class="input-large"/></td>
                        <td><%- AmountToChargeFromDesc %></td>
                    </tr>
                </tbody>
            </table>
            <div class="pull-right">
                <button class="btn" name="SaveChargesSettings" ><i class="icon-ok-sign" />Save</button> 
                <button class="btn" name="CancelChargesSettings" ><i class="icon-refresh" />Reset</button> 
            </div>
        </div>
    </form>
}