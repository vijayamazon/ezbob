@using EzBob.Web.Infrastructure.Html

<script type="text/template" id="loan-offer-multiplier-settings-template">
    <h3>Loan Offer Multiplier Settings</h3>
    <%if(configTableEntries && configTableEntries.length > 0) {%>
   
    <table class="table squeezed">
        <thead class="box">
            <tr class="box-title">
                <th>Start Score</th>
                <th>End Score</th>
                <th>Multiplier</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            <%_.each(configTableEntries, function(configTableEntry, i){%>
            <tr id="loanOfferMultiplierRow_<%=configTableEntry.Id%>">
                <td><input type="text" id="start_<%=configTableEntry.Id%>" class="range-field" value="<%= configTableEntry.Start %>"></td>
                <td><input type="text" id="end_<%=configTableEntry.Id%>" class="range-field" value="<%= configTableEntry.End %>"></td>
                <td><input type="text" id="value_<%=configTableEntry.Id%>" class="range-field" value="<%= configTableEntry.Value %>"></td>
                <td>
                    <button class="btn btn-primary removeRange" loan-offer-multiplier-id="<%= configTableEntry.Id %>">Remove</button>
                </td>
            </tr>
            <%});%>
        </tbody>
    </table>
    <%}%>
   
    <button class="btn btn-primary addRange">Add Range</button>
    <div class="pull-right">
        <button class="btn btn-primary" id="SaveLoanOfferMultiplierSettings"><i class="fa fa-check-circle" />Save</button>
        <button class="btn btn-primary" id="CancelLoanOfferMultiplierSettings"><i class="fa fa-refresh" />Reset</button>
    </div>
</script>

