@model dynamic

<script type="text/template" id="general-settings-template">
    @GeneralSettings()
</script>

@helper GeneralSettings()
{
    <div class="alert-block">
        <table class="table squeezed">
            <thead class="box">
                <tr class="box-title">
                    <th colspan="3">General Settings</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>BWABusinessCheck: </td>
                    <td>
                        <select name="bwaBusinessCheck" class="form-control selectheight">
                            <option value="0">Disabled</option>
                            <option value="1">Enabled</option>
                        </select>
                    </td>
                    <td class="left"><%- BWABusinessCheckDesc %></td> 
                </tr>
                <tr>
                    <td>HmrcSalariesMultiplier: </td>
                    <td>
                        <input type="text" name="HmrcSalariesMultiplier" class="form-control" value="<%-HmrcSalariesMultiplier%>"/>
                    </td>
                    <td class="left"><%-HmrcSalariesMultiplierDesc%></td>
                </tr>
                <tr>
                    <td>FCFFactor: </td>
                    <td>
                        <input type="text" name="FCFFactor" class="form-control" value="<%-FCFFactor%>"/>
                    </td>
                    <td class="left"><%-FCFFactorDesc%></td>
                </tr>
                @*<tr>
                    <td>DisplayEarnedPoints: </td>
                    <td>
                        <select name="displayEarnedPoints" class="form-control selectheight">
                            <option value="0">Disabled</option>
                            <option value="1">Enabled</option>
                        </select>
                    </td>
                    <td><%- DisplayEarnedPointsDesc %></td> 
                </tr>  *@
            </tbody>
        </table>
        <div class="buttons_container">
            <button class="btn btn-primary" name="SaveGeneralSettings" ><i class="fa fa-check-circle" />Save</button> 
            <button class="btn btn-primary" name="CancelGeneralSettings" ><i class="fa fa-refresh" />Reset</button> 
        </div>
    </div>
}