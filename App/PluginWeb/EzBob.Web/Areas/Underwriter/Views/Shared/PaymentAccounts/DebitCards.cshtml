@model dynamic

<table class="table table-bordered table-striped blue-header centered">
    <thead>
        <tr>
            <th>Date Added</th>
            <th>PayPoint Card Transaction ID</th>
            <th>Card No</th>
            <th>Expire Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% _.each(paymentAccounts.PayPointCards, function(pp, i){%>
        <tr>
            <td>
                <% if(pp.IsDefault){%><i class="icon-ok"></i><%}%>
                <%- EzBob.formatDateHumanFull(pp.DateAdded) %>
            </td>
            <td><%- pp.TransactionId %></td>
            <td><%- pp.CardNo %></td>
            <td><%- EzBob.formatDateHumanFull(pp.ExpireDate) || 'Unknown'%></td>
            <td>
                <% if(!pp.IsDefault){%>
                <button class="btn btn-mini set-paypoint-default" data-transactionid="<%- pp.TransactionId %>"><i class="icon-ok"></i>Set Default</button>
                <%}%>
            </td>
        </tr>
        <%}) %>
       
    </tbody>
</table>
<div class="payment-cards-buttons">
    <a class="btn" href="@Url.Action("AddPayPoint", "PaymentAccounts", new{Area = "Underwriter"})/<%-customerId%>" target="_blank">Add New</a>
    <button class="btn add-existing" >Add Existing</button>
</div>