@model dynamic

<script type="text/template" id="add-bank-account-template">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3>Add Bank Account</h3>
    </div>
    <div class="modal-body">
        <form id="paypoint-edit-form">
            <label>Account Number</label>
            <input type="text" id="ba-edit-account-number" name="number"  maxlength="8">

            <label>Sort Code</label>
            <input type="text" id="ba-edit-sort-code" name="sortcode" maxlength="6">
    
            <label>Account Type</label>
            <select name="accountType" class="selectheight">
                <option value="">-</option>
                <option value="Personal">Personal</option>
                <option value="Business">Business</option>
            </select>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary">Save changes</button>
        <button class="btn check-account" >Check</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</script>