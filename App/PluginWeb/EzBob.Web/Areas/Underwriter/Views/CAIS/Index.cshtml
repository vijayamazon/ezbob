@model dynamic

@{
    ViewBag.Title = "CAIS";
    Layout = "../Shared/_Layout.cshtml";
}
<div class="content">
    
</div>

<div id="loan_editor_schedule_template"></div>

<script type="text/template" id="cais-template">
    @Content()
</script>

@section Js{
    <script type="text/javascript">
        $("#liReports").removeClass("active");
        $("#liApplications").removeClass("active");
        $("#liCAIS").addClass("active");
        EzBob.Config.CAISDisplayedPath = '@ViewData["CAISDisplayedPath"]';

        var view = new EzBob.Underwriter.CAIS.CaisManageView({ el: ".content" });
        view.render();
    </script>
}

@helper Content(){
    <form class="form-horizontal" method="POST" action="@Url.Action("SendCAISFile", "CAIS", new{Area="Underwriter"})">
        <fieldset>
            <legend>CAIS reports</legend>
            @EzForm.Button("","Generate current CAIS reports", "Generate", "generate")
            @EzForm.Button("","Upload CAIS files", "Open & Upload", "OpenFiles")
            (<i>Default path of file: <b><% print(EzBob.Config.CAISDisplayedPath)%></b></i>)
            <input type="file" name="files" multiple style="display: none"/>
        </fieldset>
    </form>
}