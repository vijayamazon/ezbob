@using Newtonsoft.Json
@using Newtonsoft.Json.Converters
@model dynamic

@{
    ViewBag.Title = "Loan amount by day";
}


<div id="LoanAmountPerDayChart"></div>


@section Js
{
<script language="javascript">
    $.jqplot.config.enablePlugins = true;
    (function () {
        var data = @Html.Raw(JsonConvert.SerializeObject(Model, new JavaScriptDateTimeConverter()));
        var plot1 = $.jqplot('LoanAmountPerDayChart', [data], {
            title:'Loan amount by day',
            axes:{xaxis:{renderer:$.jqplot.DateAxisRenderer}},
            series:[
                {
                    lineWidth:4,
                    markerOptions:{style:'square'},
                    trendline: {
                        show:true,
                        color: "#00E9F5"
                    }
                }]
        });
    })();
</script>    
}

