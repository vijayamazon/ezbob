@model dynamic
@using (Html.BeginForm("AdminLogOn", "Account", new { Area = "" }, FormMethod.Post, new { @class = "simple-login" }))
{
    <div class="notifications"></div>
    <div>
        <div class="pager"><h3>Login to <a href="#" class="ezbob-logo ezbob-logo-login"></a></h3></div>
        <hr />
        <div class="form-group">
            <div class="controls">
                @Html.TextBox("UserName", "", new { @class = "form_control", placeholder = "user name", tabindex = "11", autofocus = "autofocus" })
            </div>
        </div>
        <div class="form-group">
            <div class="controls">
                @Html.Password("Password", "", new { @class = "form_control", placeholder = "password", tabindex = "12", autocomplete = "off" })
            </div>
        </div>
        @Html.Hidden("returnUrl", ViewData["returnUrl"])
        <br />
        <div class="form-group">
            <div class="controls">
                <input class="btn btn-primary form-control" type="submit" value="Log In" tabindex="13" id="loginSubmitBtn" />
            </div>
        </div>
        <hr/>
    </div>
}