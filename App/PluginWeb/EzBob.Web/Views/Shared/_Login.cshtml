@model EzBob.Web.Models.LogOnModel
@using (Html.BeginForm("LogOn", "Account", new { Area = "" }, FormMethod.Post, new { @class = "simple-login form-horizontal" }))
{
    <div class="inner">
        <h1>Login</h1>
        <section id="content">
            <h2>Welcome Back!</h2>
            <!-- h3>Already have an account?</h3><p>Great! Sign in below</p -->
            @Html.TextBoxFor(x => x.ReturnUrl, new { type = "hidden" })

            <div class="form_field_container">
                <label class="attardi-input">
                    <span>Email address</span>
                    <input type="email" autofocus="autofocus" class="form_field" id="UserName" name="UserName" />
                </label>
                <span class="required">*</span>
            </div>

            @*@Html.ValidationMessageFor(m => m.UserName)*@

            <div class="form_field_container">
                <label class="attardi-input">
                    <span>Password</span>
                    <input type="password" autocomplete="off" class="form_field" id="Password" name="Password" />
                </label>
                <span class="required">*</span>
            </div>

            @*@Html.ValidationMessageFor(m => m.Password)*@

            <input name="RememberMe" type="hidden" value="@Model.RememberMe" />

            <div class="form_field_container">
                <label class="checkbox" for="RememberMe" style="font-weight: normal">
                    Remember Me<input data-val="true" data-val-required="The Remember me? field is required." id="RememberMe" name="RememberMe" type="checkbox" value="@Model.RememberMe" />
                </label>
            </div>
            <div class="form_buttons_container">
                <input type="submit" value="Login" class="button orange continue disabled" id="loginSubmit" />
            </div>
            <p>@Html.ActionLink("Forgotten Password", "ForgotPassword", "Account", new { }, new { }) | @Html.ActionLink("Sign up", "Index", "Wizard", new { Area = "Customer" }, new { })</p>
        </section>
        @{Html.RenderPartial("~/Areas/Customer/Views/Shared/SideBars/_Login.cshtml");}
    </div>
    <div id="DontHaveAccount">
    </div>
    
}