@using EzBob.Web.Infrastructure
@using StructureMap
@model EzBob.Web.Models.ForgotPasswordModel

@{
    var mail = Model == null ? "" : Model.Email;
    var captchamode = ObjectFactory.GetInstance<IEzBobConfiguration>().CaptchaMode;
    ViewBag.Title = "Retrieve your EZBOB account password | EZBOB Business loans UK";
}
<div class="errorArea"></div>
<div class="pass-restore"></div>

<script type="text/template" id="restore-pass-template">
    
    
    <div class="row">
        <div class="span10 offset1 restorePasswordArea">
            @using (Html.BeginForm())
            {
                <div class="well">
                    <fieldset>
                        <legend>Password recovery</legend>
                        <hr />
                        <div class="form-horizontal restore-password">

                            @EzForm.InputText("email", "Email:", @mail, "email")
                            @EzForm.Captcha(captchamode)
                            <input class="button orange pull-right" type="button" id="getQuestion" value="Continue"/>

                            <div id="questionArea" style="display: none;">
                            
                                <div class="control-group">
                                    <label for="questionField" class="control-label">Security question:</label>
                                    <div class="controls" style="margin-top: 5px; width: 215px;">
                                        <textarea style="resize: vertical;" disabled="disabled" id="questionField"> </textarea>
                                    </div>
                                </div>
                                @EzForm.InputText("Answer", "Security answer:", "")

                                <input class="orange button pull-right" type="button" id="restore" value="Continue"/>

                            </div>
                        </div>
                    </fieldset>
                </div>
            }
        </div>
        <div class="passwordRestoredArea span10 offset1 well" style="display: none;">
            <h2>Password recovery</h2>
            <hr />

            <h3>Instructions were sent to your email</h3>
        
            @Html.ActionLink("Finish", "LogOn", "Account", new {}, new {@class = "btn-continue button orange pull-right"})
        </div>
    </div>

</script>


@section Js{
    <script type="text/javascript" src= '@Url.Content("~/Content/js/controls/ezbob.notifications.js")' > </script>
    <script type="text/javascript">
        var notifications = new EzBob.NotificationsView({ el: $(".errorArea") });
        notifications.render();

        EzBob.Config.CaptchaMode = '@ViewData["CaptchaMode"]';
        SetCaptchaMode();
        
        var passEmailView = new EzBob.ResetPasswordView({ el: $(".pass-restore") });
        passEmailView.render();
    </script>
}