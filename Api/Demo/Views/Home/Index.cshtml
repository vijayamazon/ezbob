<style>
	th, td {
		padding: 3px;
	}
</style>

<div id="body">
	<section class="featured">
		<div class="content-wrapper">
			<hgroup class="title">
				<h1>Welcome to Ezbob Demo Web API!</h1>
			</hgroup>
		</div>
	</section>
	<section class="content-wrapper main-content clear-fix">
		<div>
			Switch to <button type="button" class="set-anonymous-api">Anonymous API</button>
			<button type="button" class="set-named-api">Named API</button>
		</div>

		<h2 class="page-title"></h2>

		<div>App key: <input type="text" class="app-key" value="1234" /></div>

		<div class="named-related">
			<div>User name: <span class="logged-in-user-name"></span></div>
			<div>Session token: <input type="text" class="session-token" value="" /></div>
		</div>

		<div id="tabs">
			<ul>
				<li><a href="#login-form">Login</a></li>
				<li><a href="#read-all">Read all items</a></li>
				<li><a href="#read-one">Read an item by id</a></li>
				<li><a href="#create">Create a new item</a></li>
				<li><a href="#update">Update an item by id</a></li>
				<li><a href="#delete">Delete an item by id</a></li>
			</ul>

			<div id="login-form">
				<h3>Login</h3>

				Available logins: <b>admin/123456</b> and <b>user/654321</b>.

				<table>
					<tbody>
						<tr>
							<th>User name</th>
							<td><input type="text" class="user-name" /></td>
						</tr>
						<tr>
							<th>Password</th>
							<td><input type="password" class="password" /></td>
						</tr>
					</tbody>
				</table>
				<button type="button" class="do-login">Login</button>
			</div>

			<div id="read-all">
				<h3>Read all values</h3>
				<button type="button" class="do-read-all">Read</button>

				<table>
					<caption>
						<h3>Result</h3>
					</caption>
					<thead>
						<tr>
							<th>ID</th>
							<th>Title</th>
							<th>Content</th>
						</tr>
					</thead>
					<tbody class="results"></tbody>
					<tfoot style="display: none;">
						<tr class="result-template">
							<td data-field-name="ID"></td>
							<td data-field-name="Title"></td>
							<td data-field-name="Content"></td>
						</tr>
					</tfoot>
				</table>
			</div>

			<div id="read-one">
				<h3>Read one value</h3>
				<input type="number" class="value-id" />
				<button type="button" class="do-read-one">Read</button>

				<h3>Result</h3>
				<div class="results">
					<div>ID: <span data-field-name="ID"></span></div>
					<div>Title: <span data-field-name="Title"></span></div>
					<div>Content: <span data-field-name="Content"></span></div>
				</div>
			</div>

			<div id="create">
				<h3>Create a new item</h3>
				<table>
					<tbody>
						<tr>
							<th>Title</th>
							<td>
								<input type="text" class="title" /></td>
						</tr>
						<tr>
							<th>Content</th>
							<td>
								<input type="text" class="content" /></td>
						</tr>
					</tbody>
				</table>
				<button type="button" class="do-create">Create</button>
			</div>

			<div id="update">
				<h3>Update an item</h3>
				<table>
					<tbody>
						<tr>
							<th>ID</th>
							<td>
								<input type="number" class="value-id" /></td>
						</tr>
						<tr>
							<th>Title</th>
							<td>
								<input type="text" class="title" /></td>
						</tr>
						<tr>
							<th>Content</th>
							<td>
								<input type="text" class="content" /></td>
						</tr>
					</tbody>
				</table>
				<button type="button" class="do-update">Update</button>
			</div>

			<div id="delete">
				<h3>Delete one value</h3>
				<input type="number" class="value-id" />
				<button type="button" class="do-delete">Delete</button>
			</div>
		</div>

		<h3>Last action status</h3>
		<div class="last-action-status">No last action.</div>
	</section>
</div>

@section scripts {
	<script src="~/Content/js/lib/jquery-2.1.1.js"></script>
	<script src="~/Content/js/lib/jquery-ui-1.11.1.custom/jquery-ui.js"></script>

	<script src="~/Content/js/lib/jquery.set_display_value.js"></script>
	<script src="~/Content/js/lib/jquery.load_display_value.js"></script>

	<script src="~/Content/js/demo.js"></script>

	<link rel="stylesheet" href="~/Content/js/lib/jquery-ui-1.11.1.custom/jquery-ui.css">
}